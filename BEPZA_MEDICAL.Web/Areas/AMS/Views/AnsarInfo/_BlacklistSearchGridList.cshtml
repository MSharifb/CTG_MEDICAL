@model BEPZA_MEDICAL.Web.Areas.AMS.ViewModel.AnsarSearchViewModel

<script type="text/javascript">


    $(function () {

        $("a.deleteItem").live("click", function () {
            deleteLinkObj = $(this);  //for future use
            $('#delete-dialog').dialog('open');
            return false; // prevents the default behaviour
        });

    });
</script>

<script type="text/javascript">

    $(document).ready(function () {

        $('#jqGrid').jqGrid({
            url: '@Url.Action("GetBlacklist")',
            datatype: 'json',
            mtype: 'POST',
            postData: {
                st: status
            },
            colNames: ['ID', 'BEPZA ID', 'Name', 'Designation', 'Ansar Id', 'Reason', 'Blacklisted Date'],
            colModel: [
                            { name: 'Id', index: 'Id', align: 'left', search: false, hidden: true, edittype: 'text' },
                            { name: 'BEPZAId', index: 'BEPZAId', width: '60', align: 'left', search: true, edittype: 'text' },
                            { name: 'FullName', index: 'FullName', width: '120', align: 'left', search: true, edittype: 'text' },
                            { name: 'DesignationName', index: 'DesignationName', width: '120', align: 'left', search: false, edittype: 'text' },
                            { name: 'AnsarId', index: 'AnsarId', width: '60', align: 'left', search: true, edittype: 'text' },
                            { name: 'Reason', index: 'Reason', width: '160', align: 'left', search: false, edittype: 'text' },
                            { name: 'Date', index: 'Date', width: '80', align: 'center', search: false, edittype: 'text' }
                          ],
            autowidth: true,
            caption: "Blacklisted Ansar List",
            rowList: [20, 30, 40, 50, 100],
            pager: $('#jqGridPager'),
            rowNum: 20,
            sortname: 'ID',
            sortorder: 'asc',
            viewrecords: true,
            height: '100%',
            width: '50%'
        });
        // Pager Function
        $("#jqSearch").jqGrid('filterGrid', '#jqGrid', { gridModel: true, gridNames: true, formtype: 'horizontal', autosearch: false, enableSearch: true, enableClear: true });
        $('#jqGrid').jqGrid('setGridParam', { onSelectRow: function (id) { return setAnsarData(id); } }); //this code send employee id to parent
    });

    function viewformatEdiorLink(cellvalue, options, rowObject) {
        var url = '@Html.ActionLink("_name_", Model.ActionName, new { id = "_id_" })';
        url = url.replace(/_name_/, cellvalue);
        url = url.replace(/_id_/, rowObject[0]);
        return url;
    }

</script>

