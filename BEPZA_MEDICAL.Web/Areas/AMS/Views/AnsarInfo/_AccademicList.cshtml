

@model BEPZA_MEDICAL.Web.Areas.AMS.ViewModel.AccademicQlfnInfoViewModel

<script type="text/javascript">

    $(document).ready(function () {
        $('#jqGrid').jqGrid({
            url: '@Url.Action("GetAllAccademicQlfnInfoList", null, new { Id = Model.EmployeeId })',
            datatype: 'json',
            mtype: 'POST',
            colNames: ['Id', 'Name of the Examination', 'Academic Institution', 'Passing Year', 'Division/Grade', 'Name of the Board/University '],
            colModel: [
                        {name: 'Id', index: 'ID', align: 'left', search: false, edittype: 'text', hidden: true },
                        { name: 'ExamLevel', index: 'ExamLevel', sortable: true, width: '215px', align: 'left', edittype: 'text', formatter: viewformatEdiorLink },
                        { name: 'InstituteName', index: 'InstituteName', sortable: true, width: '165px', align: 'left', edittype: 'text' },
                        { name: 'YearOfPassing', index: 'YearOfPassing', width: '80px', sortable: true, align: 'center', edittype: 'text' },
                        { name: 'AccademicGrade', index: 'AccademicGrade', sortable: true, width: '90px', align: 'center', edittype: 'text' },
                        { name: 'UniversityOrBorard', index: 'UniversityOrBorard', sortable: true, width: '165px', align: 'left', edittype: 'text' }
                      ],
            autowidth: true,
            caption: "Educational Qualification List",
            rowList: [10, 20, 30, 40, 50, 100],
            pager: $('#jqGridPager'),
            rowNum: 10,
            sortname: 'YearOfPassing',
            sortorder: 'asc',
            viewrecords: true,
            height: '100%',
            width: '50%'
        });

        $("#jqSearch").jqGrid('filterGrid', '#jqGrid', { gridModel: true, gridNames: true, formtype: 'horizontal', autosearch: false, enableSearch: true, enableClear: true });

    });
    function deleteformateadorLink(cellvalue, options, rowObject) {
        var url = '@Html.ActionLink(" ", "Delete", new { id = "_id_" }, new { @class = "deleteItem" })';
        url = url.replace(/_id_/, rowObject[0]);
        return url;
    }
    function viewformatEdiorLink(cellvalue, options, rowObject) {

        var url = '@Html.ActionLink("_name_", "AccademicQlfnInfoIndex", new { id = "_id_" })';
        url = url.replace(/_name_/, cellvalue);
        url = url.replace(/_id_/, rowObject[0]);
        return url;
    }
</script>
