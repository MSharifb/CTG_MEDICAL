@model BEPZA_MEDICAL.Web.Areas.AMS.ViewModel.AnsarSearchViewModel

<script type="text/javascript">


    $(function () {

        $("a.deleteItem").live("click", function () {
            deleteLinkObj = $(this);  //for future use
            $('#delete-dialog').dialog('open');
            return false; // prevents the default behaviour
        });

    });
</script>

<script type="text/javascript">

    $(document).ready(function () {

        $('#jqGrid').jqGrid({
            url: '@Url.Action("GetList")',
            datatype: 'json',
            mtype: 'POST',
            postData: {
                st: status
            },
            colNames: [ 'ID', 'Name', 'BEPZA ID', 'Designation', 'Designation', 'Date of Joining in BEPZA', 'AnsarId', 'Date of Joining in Ansar', 'Status', 'Status'],
            colModel: [
                            { name: 'Id', index: 'Id', align: 'left', search: false, hidden: true, edittype: 'text' },
                            { name: 'FullName', index: 'FullName', align: 'left', search: true, edittype: 'text', width: '200px' },
                            { name: 'BEPZAId', index: 'BEPZAId', align: 'left', search: true, edittype: 'text', width: '80px' },
                            { name: 'DesignationId', index: 'DesignationId', align: 'left', search: true, hidden: true, edittype: 'select', surl: '@Url.Action("GetDesignation")' },
                            { name: 'desigName', index: 'desigName', align: 'left', search: false, edittype: 'text', width: '200px' },
                            { name: 'DateofJoining', index: 'DateofJoining', align: 'center', search: false, edittype: 'text' },
                            { name: 'AnsarId', index: 'AnsarId', align: 'left', search: true, edittype: 'text', width: '120px' },
                            { name: 'AnsarJoiningDate', index: 'AnsarJoiningDate', align: 'center', search: false, edittype: 'text' },
                            { name: 'StatusId', index: 'StatusId', align: 'left', hidden: true, search: true, edittype: 'select', surl: '@Url.Action("GetStatus")' },
                            { name: 'status', index: 'status', align: 'left', search: false, edittype: 'text', width: '80px' },
                          ],
            autowidth: true,
            caption: "Ansar List",
            rowList: [20, 30, 40, 50, 100],
            pager: $('#jqGridPager'),
            rowNum: 20,
            sortname: 'ID',
            sortorder: 'asc',
            viewrecords: true,
            height: '100%',
            width: '50%'
        });
        // Pager Function
        $("#jqSearch").jqGrid('filterGrid', '#jqGrid', { gridModel: true, gridNames: true, formtype: 'horizontal', autosearch: false, enableSearch: true, enableClear: true });
        $('#jqGrid').jqGrid('setGridParam', { onSelectRow: function (id) { return setAnsarData(id); } }); //this code send employee id to parent
    });

    function viewformatEdiorLink(cellvalue, options, rowObject) {
        var url = '@Html.ActionLink("_name_", Model.ActionName, new { id = "_id_" })';
        url = url.replace(/_name_/, cellvalue);
        url = url.replace(/_id_/, rowObject[0]);
        return url;
    }

</script>

