<script type="text/javascript">
    $(document).ready(function () {

        $('#jqGrid').jqGrid({
            url: '@Url.Action("GetList")',
            datatype: 'json',
            mtype: 'POST',
            colNames: ['ID', 'Present', 'Early Arrival', 'Early Departure', 'Late Arrival', 'Late Departure', 'Absent', 'Leave', 'Out Station Duty', 'Delete'],
            colModel: [
                  { name: 'Id', index: 'Id', align: 'left', search: false, hidden: true, edittype: 'text' },
                  { name: 'Present', index: 'Present', align: 'center', width: '60px', search: false, edittype: 'text', formatter: viewformatEdiorLink },
                  { name: 'EarlyArrival', index: 'EarlyArrival', align: 'center', width: '60px', search: false, edittype: 'text' },
                  { name: 'EarlyDeparture', index: 'EarlyDeparture', align: 'center', width: '60px', search: false, edittype: 'text' },
                  { name: 'LateArrival', index: 'LateArrival', align: 'center', width: '60px', search: false, edittype: 'text' },
                  { name: 'LateDeparture', index: 'LateDeparture', align: 'center', width: '60px', search: false, edittype: 'text' },
                  { name: 'Absent', index: 'Absent', align: 'center', width: '60px', search: false, edittype: 'text' },
                  { name: 'Leave', index: 'Leave', align: 'center', width: '60px', search: false, edittype: 'text' },
                  { name: 'OutStationDuty', index: 'OutStationDuty', align: 'center', width: '60px', search: false, edittype: 'text' },
                  { name: 'Delete', index: 'Delete', align: 'right', search: false, hidden: IsDeleteAssigned, sortable: false, width: '40px', edittype: 'image', formatter: deleteformateadorLink }
            ],
            autowidth: true,
            caption: "Daily Attendance Status",
            rowList: [20, 30, 40, 50, 100],
            pager: $('#jqGridPager'),
            rowNum: 20,
            viewrecords: true,
            height: '100%',
            width: '50%'
        });
    });
    function deleteformateadorLink(cellvalue, options, rowObject) {
        var url = '@Html.ActionLink(" ", "Delete", new { id = "_id_" }, new { @class = "deleteItem" })';
        url = url.replace(/_id_/, rowObject[0]);
        return url;
    }
    function viewformatEdiorLink(cellvalue, options, rowObject) {

        var url = '@Html.ActionLink("_name_", "Edit", new { id = "_id_" })';
        url = url.replace(/_name_/, cellvalue);
        url = url.replace(/_id_/, rowObject[0]);
        return url;
    }
</script>
