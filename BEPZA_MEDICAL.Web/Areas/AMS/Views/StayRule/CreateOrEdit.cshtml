<div>
    @using (Html.BeginForm(Model.ActionType, "StayRule", FormMethod.Post, new { id = "frm" }))
    {
        <div class="message">
            @if (!string.IsNullOrEmpty(Model.ErrMsg))
            {
                if (@Model.IsError == 1)
                {
                    <div class="failed">
                        @Model.ErrMsg
                    </div>
                }
                else
                {
                    <div class="success">
                        @Model.ErrMsg
                    </div>
                }
            }
            @Html.ValidationSummary(false, BEPZA_MEDICAL.Web.Utility.Common.ValidationSummaryHead)
        </div>

        @Html.HiddenFor(m => m.Id)
        @*@Html.HiddenFor(m => m.ZoneInfoId)*@
        <div class="GroupBox">

            <div class="row">
                <span class="label">
                    @Html.LabelFor(model => model.CategoryId)
                    <label class="required-field">*</label>
                </span>
                <span class="field">
                    @Html.DropDownListFor(m => m.CategoryId, Model.CategoryList, @String.Format("{0}", Content.DDLOptionalLabel()))
                </span>
                @*<span class="label-right">
                        &nbsp;
                    </span>
                    <span class="field">
                        &nbsp;
                    </span>*@
            </div>

            <div class="row">
                <span class="label">
                    @Html.LabelFor(model => model.MaximumStay)
                    <label class="required-field">*</label>
                </span>
                <span class="field">
                    @Html.TextBoxFor(model => model.MaximumStay, new {@type = "number", @class = "required" })
                    &nbsp; month(s)
                </span>
                @*<span>
                        month(s)
                    </span>*@
                @*<span class="label-right">
                        <label>month(s)</label>
                    </span>
                    <span class="field">
                        &nbsp;
                    </span>*@
            </div>

            <div class="row">
                <span class="label">
                    @Html.LabelFor(model => model.Remarks)
                </span>
                <span>
                    @Html.TextAreaFor(model => model.Remarks, new { @style = @"width:55%" })
                </span>
                @*<span class="label-right">
                        &nbsp;
                    </span>
                    <span class="field">
                        &nbsp;
                    </span>*@
            </div>

            <div class="clear"></div>
        </div>

        <div class="GroupBox">
            <div class="button-crude">
                @if ((new BEPZA_MEDICAL.Web.Utility.AppConstant()).IsAddAssigned)
                {
                    <input type="submit" value="Save" id="btnSave" name="btnSubmit" style="margin-right: 8px;" />
                    <input type="submit" value="Update" id="btnUpdate" name="btnSubmit" />
                }
                <input type="button" value="Clear" id="btnClear" name="btnClear" />
            </div>
            <div class="clear">
            </div>
        </div>
    }
</div>

<div class="button-crude button-left" style="margin: 5px">
    @Html.ActionLink("Back to List", "Index", "StayRule")
</div>
