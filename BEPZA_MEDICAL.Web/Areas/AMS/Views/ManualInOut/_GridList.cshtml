<script type="text/javascript">
    $(document).ready(function () {
        $('#jqGrid').jqGrid({
            url: '@Url.Action("GetList")',
            datatype: 'json',
            mtype: 'POST',
            colNames: ['Id', 'I.C. No','Shift Name', 'Employee Name', 'Card No.', 'Attendance Date & Time', 'Entry Type', 'Reason', 'Delete'],
            colModel: [
            { name: 'Id', index: 'Id', align: 'left', search: false, hidden: true, edittype: 'text' },
            { name: 'EmpId', index: 'EmpId', align: 'Center', width: '60px', search: true, edittype: 'text', formatter: viewformatEdiorLink },
            { name: 'ShiftName', index: 'ShiftId', align: 'Center', width: '120px', search: true, hidden: true, edittype: 'select', surl: '@Url.Action("ShiftNameforView")' },
            { name: 'EmployeeName', index: 'EmployeeName', align: 'left', search: true, edittype: 'text' },
            { name: 'CardNo', index: 'CardNo', align: 'Center', width: '120px', search: false, edittype: 'text' },
            { name: 'AttendanceDate', index: 'AttendanceDate', align: 'Center', width: '120px', search: true, edittype: 'text' },
            { name: 'EntryType', index: 'EntryType', align: 'Center', width: '120px', search: false, edittype: 'text' },
            { name: 'Reason', index: 'Reason', align: 'Center', search: false, edittype: 'text' },
            { name: 'Delete', index: 'Delete', align: 'Center', search: false, hidden: IsDeleteAssigned, sortable: false, width: '40px', edittype: 'image', formatter: deleteformateadorLink }
            ],
            autowidth: true,
            caption: "Manual In/Out Information",
            rowList: [20, 30, 40, 50, 100],
            pager: $('#jqGridPager'),
            rowNum: 20,
            viewrecords: true,
            height: '100%',
            width: '50%'
        });

        $("#jqSearch").jqGrid('filterGrid', '#jqGrid', { gridModel: true, gridNames: true, formtype: 'horizontal', autosearch: false, enableSearch: true, enableClear: true });

    });

    function deleteformateadorLink(cellvalue, options, rowObject) {
        var url = '@Html.ActionLink(" ", "Delete", new { id = "_id_" }, new { @class = "deleteItem" })';
        url = url.replace(/_id_/, rowObject[0]);
        return url;
    }
    function viewformatEdiorLink(cellvalue, options, rowObject) {

        var url = '@Html.ActionLink("_name_", "Edit", new { id = "_id_" })';
        url = url.replace(/_name_/, cellvalue);
        url = url.replace(/_id_/, rowObject[0]);
        return url;
    }

</script>

