@model ERP_BEPZA.Web.Areas.AMS.Models.ShiftAssigment.ShiftAssignmentViewModel
@using ERP_BEPZA.Web.Helpers
@Html.HiddenFor(m => m.Mode)
<div class="GroupBox">
    <div id="pageData"></div>
    <div class="row">
        <span class="label">
            @Html.LabelFor(model => model.ShiftType)
            <label class="required-field">*</label>
        </span><span class="field">
            @Html.DropDownListFor(m => m.ShiftType, Model.ShiftTypeList, @String.Format("{0}", Content.DDLOptionalLabel()))

        </span>
    </div>
    <div class="row">
        <span class="label">
            @Html.LabelFor(model => model.DepartmentId)
        <label class="required-field">
            *
        </label>
        </span><span class="field">
            @Html.DropDownListFor(model => model.DepartmentId, Model.Department, @String.Format("{0}", Content.DDLOptionalLabel()), new { @class = "required" })
        </span><span class="label-right">
            @Html.LabelFor(model => model.FromDate)
        <label class="required-field">
            *
        </label>
        </span><span class="field">
                   @Html.EditorFor(model => model.FromDate, new { @class = "required" }) 
        </span>
    </div>
<div class="row">
    <span class="label">
        @Html.LabelFor(model => model.GradeId)
        <label class="required-field">
            *
        </label>
    </span><span class="field">
               @Html.DropDownListFor(model => model.GradeId, Model.Grade, @String.Format("{0}", Content.DDLOptionalLabel()), new { @class = "required" })
    </span>
    <span class="label-right">
        @Html.LabelFor(model => model.ToDate)  <label class="required-field">   * </label>
    </span><span class="field-LargeWidth">
        @Html.EditorFor(model => model.ToDate, new { @class = "required" })
    </span>
    
</div>

<div class="clear">
</div>

</div>
<br />
<div class="GroupBox">
    <div class="row" align="center">
        <div style="width: 90%">
            <table id="grid" class="contenttable" width="50%">
                <thead>
                    <tr>
                        <th width="10%" align="center">
                            <input type="checkbox" class="chkAll" name="chk" /> Check All
                        </th>
                        <th width="20%" align="center">
                            I.C. No.
                        </th>
                        <th width="15%" align="center">
                            Employee Name
                        </th>
                        <th width="10%" align="center">
                            Designation 
                        </th>
                        <th width="10%" align="center">
                            Date of Joining 
                        </th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>
</div>
<div class="clear">
</div>
<div class="GroupBox" id="EmpSelectedGridList">
    <div class="row" align="center">
        <div class="clear">
        </div>
        <div class="button-crude fixedAddButton" style="margin-left: 1220px;">
            @Html.ActionLink("Add", "AddDetail", new { masterID = Model.Id, DepartmentId = Model.DepartmentId, GradeId = Model.GradeId }, new { @class = "addItem", @id = "addDetails" })
        </div>
        <div class="clear">
        </div>

        <div style="width: 90%">
            <table class="tblOrderList contenttable custom-grid" width="50%">
                <thead>
                    <tr>
                        <th width="10%" align="center">
                            I.C. No.
                        </th>
                        <th width="15%" align="center">
                            Employee Name
                        </th>

                        <th width="15%" align="center">
                            Shift Group
                            <label style='color: red; font-weight: normal;'>
                                *
                            </label>
                        </th>

                        <th width="20%" align="center">
                            Shift Name
                            <label style='color: red; font-weight: normal;'>
                                *
                            </label>
                        </th>
                        <th width="20%" align="center">
                            Rest Day
                            <label style='color: red; font-weight: normal;'>
                                *
                            </label>
                        </th>
                        <th width="20%" align="center">
                            Apply Type
                            <label style='color: red; font-weight: normal;'>
                                *
                            </label>
                        </th>
                        <th width="5%">
                            Remove
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @{ if (Model.Mode == "Edit") { Html.RenderPartial("_Details",Model); }}
                </tbody>
            </table>
        </div>
    </div>
</div>

<div id="divProjectList">
    <iframe id="styleAdvance" src="" width="100%" height="100%" style="border: 0px solid white;
        padding-right: 0px;">
        <p>
            Your browser does not support iframes.
        </p>
    </iframe>
</div>
<script>
    $("#pageData").data("URL", { initEmp: '@Url.Action("GetEmployeeList", "ShiftAssignment")', addEmp: '@Url.Action("AddedEmployee", "ShiftAssignment")' });
        
</script>
<script src="@Url.Content("~/Scripts/AMS/ShiftAssignment.js")"></script>

<script>
    // New Added By Nazrul for Clear Button
    $(function () {
        var Url = window.location.href;
        $("#btnClear").live("click", function (event) {
            event.preventDefault();
            window.location.href = Url;
        });
    });

</script>

