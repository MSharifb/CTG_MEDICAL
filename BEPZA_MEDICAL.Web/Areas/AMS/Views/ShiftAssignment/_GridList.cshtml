<script type="text/javascript">

    $(document).ready(function () {
        $('#jqGrid').jqGrid({
            url: '@Url.Action("GetList")',
            datatype: 'json',
            mtype: 'POST',
            colNames: ['ID', 'Department Name', 'Department', 'Grade', 'Grade', 'From Date', 'To Date', 'Delete'],
            colModel: [
                            { name: 'Id', index: 'Id', align: 'left', search: false, hidden: true, edittype: 'text' },
                            { name: 'DepartmentName', index: 'DepartmentName', align: 'left', search: false, width: '200px', edittype: 'text', formatter: viewformatEdiorLink },
                            { name: 'DepartmentId', index: 'DepartmentId', align: 'left', search: true, hidden: true, edittype: 'select', surl: '@Url.Action("GetDivision")' },
                            { name: 'GradeId', index: 'GradeId', align: 'left', search: true, hidden: true, edittype: 'select', surl: '@Url.Action("GetGrade")' },
                            { name: 'GradeName', index: 'GradeName', align: 'left', search: false, edittype: 'text' },
                            { name: 'FromDate', index: 'FromDate', align: 'center', search: true, sortable: true, edittype: 'text', width: '200px' },
                            { name: 'ToDate', index: 'ToDate', align: 'center', search: true, sortable: true, edittype: 'text' },
                            { name: 'Delete', index: 'Delete', align: 'right', search: false, hidden: IsDeleteAssigned, sortable: false, width: '70px', edittype: 'image', formatter: deleteformateadorLink }
                          ],
            autowidth: true,
            caption: "Office Hour/Shift Assignment",
            rowList: [20, 30, 40, 50, 100],
            pager: $('#jqGridPager'),
            rowNum: 20,
            sortname: 'ID',
            sortorder: 'asc',
            viewrecords: true,
            height: '100%',
            width: '50%'
        });
        // Pager Function
        $("#jqSearch").jqGrid('filterGrid', '#jqGrid', { gridModel: true, gridNames: true, formtype: 'horizontal', autosearch: false, enableSearch: true, enableClear: true });

    });

    function deleteformateadorLink(cellvalue, options, rowObject) {
        var url = '@Html.ActionLink(" ", "Delete", new { id = "_id_" }, new { @class = "deleteItem" })';
        url = url.replace(/_id_/, rowObject[0]);
        return url;
    }
    function viewformatEdiorLink(cellvalue, options, rowObject) {

        var url = '@Html.ActionLink("_name_", "Edit",  new { id = "_id_" , grd = "_grd_"})';
        url = url.replace(/_name_/, cellvalue);
        url = url.replace(/_id_/, rowObject[2]);
        url = url.replace(/_grd_/, rowObject[3]);
        //url = url.replace(/Edit/, 'Edit/' + rowObject[0]);
        return url;
    }

</script>



<script type="text/javascript">


    $(function () {

        $("a.deleteItem").live("click", function () {
            deleteLinkObj = $(this);  //for future use
            $('#delete-dialog').dialog('open');
            return false; // prevents the default behaviour
        });
        $('#delete-dialog').dialog({
            autoOpen: false, width: 320, resizable: false, modal: true, //Dialog options
            overlay: {
                backgroundColor: '#000',
                opacity: 0.5
            },
            buttons: {
                "Yes": function () {

                    $.post(deleteLinkObj[0].href, function (obj) {  //Post to action

                        if (obj.Success) {
                            $("#message").show().html("<b>" + obj.Message + "</b>").css("color", "Green");
                            $('#sButton').trigger('click');
                        }
                        else {
                            $("#message").show().html("<b>" + obj.Message + "</b>").css("color", "red");
                        }
                    });
                    $(this).dialog("close");
                },
                "No": function () {
                    $(this).dialog("close");
                }
            }
        });

        $('#sg_FromDate, #sg_ToDate').datepicker({ buttonImage: '@Url.Content("~/Content/Images/calendar-blue.gif")', dateFormat: 'dd-mm-yy', buttonImageOnly: true, showOn: "button", buttonText: 'Choose' });
       // .css({ 'width': '100px' });

    });

</script>
