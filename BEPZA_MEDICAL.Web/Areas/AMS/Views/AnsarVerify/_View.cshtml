@model BEPZA_MEDICAL.Web.Areas.WFM.ViewModel.OfflineWelfareFundApplicationInformationViewModel

@{
    Layout = null;
}
<div class="form-horizontal">

    <fieldset>
        <legend> Application Details </legend>

        <div class="form-group">
            @Html.LabelFor(model => model.WelfareFundCategoryId, new { @class = "col-sm-2 control-label " })
            <div class="col-sm-4">
                @Html.TextBoxFor(model => model.WelfareFundCategoryName, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Reason, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-4">
                @Html.TextBoxFor(model => model.Reason, new { @class = "form-control" })
            </div>
        </div>

            <div class="form-group">
                @Html.LabelFor(model => model.AppTo, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-4">
                    @Html.TextAreaFor(model => model.AppTo, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Subject, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(model => model.Subject, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Body, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextAreaFor(model => model.Body, new { @class = "form-control"})
                </div>
            </div>
    </fieldset>

    <fieldset>
        <legend> Signatory </legend>

        <div class="form-group">
            @Html.LabelFor(model => model.SignatoryEmpId, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-2">
                @Html.TextBoxFor(model => model.SignatoryEmpId, new { @style = "width:150px", @class = "form-control read-only" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.SignatoryEmpName, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-4">
                @Html.TextBoxFor(model => model.SignatoryEmpName, new { @class = "form-control read-only" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.SignatoryEmpDesignation, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-4">
                @Html.TextBoxFor(model => model.SignatoryEmpDesignation, new { @class = "form-control read-only" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.SignatoryEmpPhone, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-4">
                @Html.TextBoxFor(model => model.SignatoryEmpPhone, new { @class = "form-control read-only" })
            </div>
        </div>
    </fieldset>
</div>
