            mtype: 'POST',
            colNames: ['Id', 'Ansar Name', 'BEPZA ID', 'Ansar ID', 'Date of Joining', 'Verified By', 'Verified Date', 'Status'],
            colModel: [
            { name: 'Id', index: 'Id', align: 'left', search: false, hidden: true, edittype: 'text' },
            { name: 'AnsarName', index: 'AnsarName', align: 'center', width: '100px', search: false, edittype: 'text' },
            { name: 'BEPZAID', index: 'BEPZAID', align: 'center', width: '100px', search: false, edittype: 'text' },
            { name: 'AnsarId', index: 'AnsarId', align: 'center', width: '100px', search: false, edittype: 'text' },
            { name: 'DateofJoining', index: 'DateofJoining', align: 'center', width: '120px', search: false, edittype: 'text' },
            { name: 'VerifiedByName', index: 'VerifiedByName', align: 'center', width: '100px', search: true, edittype: 'text' },
            { name: 'VerifyDate', index: 'VerifyDate', align: 'center', width: '120px', search: true, edittype: 'text' },
            { name: 'Status', index: 'Status', align: 'center', width: '100px', search: false, edittype: 'text' }
            //{ name: 'Edit', index: 'Edit', align: 'center', search: false, sortable: false, width: '50px', edittype: 'image', formatter: ViewformateadorLink },
            //{ name: 'Delete', index: 'Delete', align: 'Center', search: false, hidden: IsDeleteAssigned, sortable: false, width: '40px', edittype: 'image', formatter: deleteformateadorLink }
            ],
            autowidth: true,
            caption: "Ansar Verify",
            rowList: [20, 30, 40, 50, 100],
            pager: $('#jqGridPager'),
            rowNum: 20,
            viewrecords: true,
            height: '100%',
            width: '50%',
            loadComplete: function () {
                $("a.deleteItem").on('click', function (e) {
                    e.preventDefault();
                    deleteLinkObj = $(this);  //for future use
                    $('#delete-dialog').dialog('open');
                    return false; // prevents the default behaviour
                });
            }
        });
        // Pager Function
        $("#jqSearch").jqGrid('filterGrid', '#jqGrid', { gridModel: true, gridNames: true, formtype: 'horizontal', autosearch: false, enableSearch: true, enableClear: true });
        $('#sg_VerifyDate').datepicker({ buttonImage: '@Url.Content("~/Content/Images/calendar-blue.gif")', dateFormat: 'dd-mm-yy', changeMonth: true, changeYear: true, buttonImageOnly: true, showOn: "button", buttonText: 'Choose' });
    });


    function deleteformateadorLink(cellvalue, options, rowObject) {
        if (rowObject[03] == 'Canceled') {
            var url = '@Html.ActionLink(" ", "Delete", new { id = "_id_" }, new { @class = "deleteItem" })';
            url = url.replace(/_id_/, rowObject[0]);
            return url;
        }
        return "";
    }

    function ViewformateadorLink(cellvalue, options, rowObject) {
        if (rowObject[03] == 'Canceled') {
            var url = '@Html.ActionLink(" ", "Edit", new { id = "_id_" }, new { @class = "editItem", @style = "text-decoration: none;" })';
            url = url.replace(/_name_/, cellvalue);
            url = url.replace(/_id_/, rowObject[0]);
            return url;
        }
        return "";
    }

</script>

