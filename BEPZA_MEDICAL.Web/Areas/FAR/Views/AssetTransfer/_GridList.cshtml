<script type="text/javascript">

    $(document).ready(function () {
        $('#jqGrid').jqGrid({
            url: '@Url.Action("GetList")',
            datatype: 'json',
            mtype: 'POST',
            colNames: ['ID', 'Asset Code', 'Asset Name/Model', 'Transter Date', 'Transfer Date Between', 'And', 'From Location', 'To Location'
            , 'From Location', 'To Location','Edit', 'Delete'],
            colModel: [
                { name: 'Id', index: 'Id', align: 'left', search: false, hidden: true, edittype: 'text' },
                { name: 'AssetCode', index: 'AssetCode', width: '60px', align: 'left', hidden: false, search: true, edittype: 'text' },
                { name: 'AssetName', index: 'AssetName', width: '120px', align: 'left', hidden: false, search: true, edittype: 'text' },

                { name: 'TransferDate', index: 'TransferDate', width: '80px', align: 'center', hidden: false, search: false, edittype: 'text' },
                { name: 'TransferDateBetween', index: 'TransferDateBetween', align: 'left', hidden: true, search: true, edittype: 'text' },
                { name: 'TransferDateAnd', index: 'TransferDateAnd', align: 'left', hidden: true, search: true, edittype: 'text' },

                { name: 'FromLocationId', index: 'FromLocationId', align: 'left', hidden: true, search: true, edittype: 'select', surl: '@Url.Action("GetFromLocationList")' },
                { name: 'ToLocationId', index: 'ToLocationId', align: 'left', hidden: true, search: true, edittype: 'select', surl: '@Url.Action("GetToLocationList")' },
                { name: 'FromLocation', index: 'FromLocation', width: '110px', align: 'left', hidden: false, search: false, edittype: 'text' },
                { name: 'ToLocation', index: 'ToLocation', width: '110px', align: 'left', hidden: false, search: false, edittype: 'text' },

                { name: 'Edit', index: 'Edit', align: 'center', search: false, sortable: false, width: '50px', edittype: 'image', formatter: viewformateadorLink },
                { name: 'Delete', index: 'Delete', align: 'Center', search: false, hidden: IsDeleteAssigned, sortable: false, width: '40px', edittype: 'image', formatter: deleteformateadorLink }
            ],
            autowidth: true,
            caption: "Asset Transfer",
            rowList: [20, 30, 40, 50, 100],
            pager: $('#jqGridPager'),
            rowNum: 20,
            viewrecords: true,
            height: '100%',
            width: '50%',
            loadComplete: function () {
                $("a.deleteItem").on('click', function (e) {
                    e.preventDefault();
                    deleteLinkObj = $(this);  //for future use
                    $('#delete-dialog').dialog('open');
                    return false; // prevents the default behaviour
                });
            }
        });
        // Pager Function
        $("#jqSearch").jqGrid('filterGrid', '#jqGrid', { gridModel: true, gridNames: true, formtype: 'horizontal', autosearch: false, enableSearch: true, enableClear: true });

    });


    function deleteformateadorLink(cellvalue, options, rowObject) {
        var url = '@Html.ActionLink(" ", "Delete", new { id = "_id_" }, new { @class = "deleteItem" })';
        url = url.replace(/_id_/, rowObject[0]);
        return url;
    }

    function viewformateadorLink(cellvalue, options, rowObject) {
        var url = '@Html.ActionLink(" ", "Edit", new { id = "_id_" }, new { @class = "editItem", @style = "text-decoration: none;" })';
        url = url.replace(/_name_/, cellvalue);
        url = url.replace(/_id_/, rowObject[0]);
        return url;
    }

</script>

<script type="text/javascript">

    function handleDeleteSuccess() {
    }
    function handleDeleteFailure() {
        $("#message").show().html('There is an Ajax call back error!');
    }
    function JsonDelete_OnComplete(context) {
        var obj = eval("(" + context.responseText + ")");
        if (obj.Success) {
            $("#message").show().html("<b>" + obj.Message + "</b>").css("color", "Green");
            $('#sButton').trigger('click');
        }
        else {
            $("#message").show().html("<b>" + obj.Message + "</b>").css("color", "red");
        }
    }

</script>

