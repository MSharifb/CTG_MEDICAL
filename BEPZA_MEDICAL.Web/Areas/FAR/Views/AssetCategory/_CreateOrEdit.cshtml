@model BEPZA_MEDICAL.Web.Areas.FAR.ViewModel.AssetCategoryViewModel

@{
    Layout = null;
}

<div id="message" class="form-group messageBox clearfix">
    @Html.ValidationSummary(false, BEPZA_MEDICAL.Web.Utility.Common.ValidationSummaryHead)
    @if (!string.IsNullOrEmpty(Model.ErrMsg))
    {
        <div id="ErrMsg" class="@Model.errClass">
            @Model.ErrMsg
        </div>
    }
</div>

<div class="form-horizontal">
    <fieldset>
        <legend>Asset Category</legend>
        <div class="form-group" style="display:none">
            @Html.HiddenFor(model => model.Id)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.CategoryName, new { @class = "col-sm-2 control-label labelRequired" })
            <div class="col-sm-4">
                @Html.TextBoxFor(model => model.CategoryName, new { @class = "form-control" })
            </div>
            @Html.LabelFor(model => model.CategoryCode, new { @class = "col-sm-2 control-label labelRequired" })
            <div class="col-sm-4">
                @Html.EditorFor(model => model.CategoryCode, new { @class = "form-control" })              
            </div>
           
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.DepreciationMethodId, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-4">
                @Html.DropDownListFor(model => model.DepreciationMethodId, Model.DepreciationMethodList, @String.Format("{0}", Content.DDLOptionalLabel()), new { @class = "form-control" })
            </div>
            @Html.LabelFor(model => model.MinimumCost, new { @class = "col-sm-2 control-label labelRequired" })
            <div class="col-sm-4">
                @Html.TextBoxFor(model => model.MinimumCost, new { @class = "form-control" })
            </div>           
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.ReservedIDFrom, new { @class = "col-sm-2 control-label labelRequired" })
            <div class="col-sm-4">
                @Html.TextBoxFor(model => model.ReservedIDFrom, new { @class = "form-control" })
            </div>
            @Html.LabelFor(model => model.ReservedIDTo, new { @class = "col-sm-2 control-label labelRequired" })
            <div class="col-sm-4">
                @Html.TextBoxFor(model => model.ReservedIDTo, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Remarks, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.TextAreaFor(model => model.Remarks, new { @class = "form-control" })
            </div>          
        </div>
    </fieldset>
</div>

