                    <div class="col-sm-4">
                        @Html.LabelFor(model => model.AssetCode, new { @class = "control-label labelRequired" })
                        @Html.TextBoxFor(model => model.AssetCode, new { @class = "form-control read-only", @readonly = true })
                    </div>
                    <div class="col-sm-4">
                        @Html.LabelFor(model => model.AssetName, new { @class = "  labelRequired" })
                        @Html.TextBoxFor(model => model.AssetName, new { @class = "form-control read-only", @readonly = true })

