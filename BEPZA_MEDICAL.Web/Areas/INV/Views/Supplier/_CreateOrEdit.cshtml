@model BEPZA_MEDICAL.Web.Areas.INV.ViewModel.SupplierInfoViewModel

@{
    Layout = null;
}

<div class="GroupBox">
    <div class="row">
        <span class="label">
            @Html.HiddenFor(model => model.Id)
            @Html.LabelFor(model => model.SupplierName)
            <label class="required-field">
                *
            </label>
        </span>
        <span class="field">
            @Html.TextBoxFor(model => model.SupplierName)
        </span>
        <span class="label">
            @Html.LabelFor(model => model.Address)
        </span>
        <span class="field">
            @Html.TextAreaFor(model => model.Address)
        </span>
    </div>
    <div class="row">
        <span class="label">
            @Html.LabelFor(model => model.PhoneNo)
        </span>
        <span class="field">
            @Html.TextBoxFor(model => model.PhoneNo)
        </span>
        <span class="label">
            @Html.LabelFor(model => model.FaxNo)
        </span>
        <span class="field">
            @Html.TextBoxFor(model => model.FaxNo)
        </span>
    </div>
    <div class="row">
        <span class="label">
            @Html.LabelFor(model => model.Email)
        </span>
        <span class="field">
            @Html.TextBoxFor(model => model.Email)
        </span>
        <span class="label">
            @Html.LabelFor(model => model.TradeLicenseNo)
        </span>
        <span class="field">
            @Html.TextBoxFor(model => model.TradeLicenseNo)
        </span>
    </div>
    <div class="row">
        <span class="label">
            @Html.LabelFor(model => model.TIN)
        </span>
        <span class="field">
            @Html.TextBoxFor(model => model.TIN)
        </span>
        <span class="label">
            @Html.LabelFor(model => model.VATRegNo)
        </span>
        <span class="field">
            @Html.TextBoxFor(model => model.VATRegNo)
        </span>
    </div>
    <div class="row">
        <span class="label">
            @Html.LabelFor(model => model.ContactPersonName)
        </span>
        <span class="field">
            @Html.TextBoxFor(model => model.ContactPersonName)
        </span>
        <span class="label">
            @Html.LabelFor(model => model.ContactPersonNo)
        </span>
        <span class="field">
            @Html.TextBoxFor(model => model.ContactPersonNo)
        </span>
    </div>
    <div class="row">
        <span class="label">
            @Html.LabelFor(model => model.Remarks)
        </span>
        <span class="field">
            @Html.TextAreaFor(model => model.Remarks)
        </span>
    </div>
</div>


<script type="text/javascript">

    $(document).ready(function () {
        buttonHide();
    });

    $(function() {
        var Url = window.location.href;
        $("#btnClear").live("click", function (event) {
            event.preventDefault();
            window.location.href = Url;
        });
    });

    function buttonHide() {
        if ('@Model.errClass' == "success" && '@Model.IsError' == "0") {
            //$('input[name="btnSave"]').hide();
        }
    }

</script>
