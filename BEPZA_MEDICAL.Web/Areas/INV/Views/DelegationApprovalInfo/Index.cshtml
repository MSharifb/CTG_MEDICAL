@{ ViewBag.Title = "jqGrid in ASP.NET MVC - Searching [Custom]"; }
@{
    ViewBag.Title = "Delegation of Administrative & Financial Approval Information";
    Layout = "~/Areas/INV/Views/Shared/_Layout.cshtml";
}
<script type="text/javascript">


    $(function () {
        $("a.deleteItem").live("click", function () {
            deleteLinkObj = $(this);  //for future use
            $('#delete-dialog').dialog('open');
            return false; // prevents the default behaviour
        });

    });

</script>
@using (Ajax.BeginForm("Index", "DelegationApprovalInfo", new AjaxOptions { HttpMethod = "POST" }, new { id = "frm" }))
{
    <div class="GroupBox" style="max-height: 25px" id="message">
    </div>
    <table align="center" width="100%">
        <tr id="Search Area">
            <td>
                <fieldset>
                    <div id="jqSearch">
                    </div>
                </fieldset>
            </td>
        </tr>
        <tr>
            <td>
                <div class="button-crude button-left" style="margin: 5px 0px">
                    @if ((new BEPZA_MEDICAL.Web.Utility.AppConstant()).IsAddAssigned)
                    {
                        @Html.ActionLink("Add New", "Create", "DelegationApprovalInfo")
                    }
                </div>
            </td>
        </tr>
        <tr id="GridView Area">
            <td align="center">
                <table id="jqGrid" width="100%"></table>
                <div id="jqGridPager" style="text-align: center;">
                </div>
            </td>
        </tr>
    </table>
}
<script src="@Url.Content("~/Scripts/jquery.jqGrid.addons-4.1.2.js")" type="text/javascript"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $('#jqGrid').jqGrid({
            url: '@Url.Action("GetDelegationInfo")',
            autowidth: true,
            datatype: 'json',
            mtype: 'POST',
            colNames: ['ID', 'Item Type', 'Item Type', 'Department', 'Department', 'Designation', 'Date', 'To', 'Delete'],
            colModel: [
                        { name: 'ID', index: 'ID', align: 'left', search: false, hidden: true, edittype: 'text' },
                        { name: 'ItemTypeId', index: 'ItemTypeId', align: 'left', width: '60px', search: true, hidden: true, edittype: 'select', surl: '@Url.Action("ItemTypeforView")' },
                        { name: 'ItemTypeName', index: 'ItemTypeName', width: '100', align: 'left', search: false, edittype: 'select', formatter: viewformatEdiorLink },
                        { name: 'DepartmentId', index: 'DepartmentId', align: 'left', width: '60px', search: true, hidden: true, edittype: 'select', surl: '@Url.Action("DepartmentforView")' },
                        { name: 'DepartmentName', index: 'DepartmentName', align: 'left', width: '60px', search: false, edittype: 'select'},
                        { name: 'DesignationName', index: 'DesignationName', align: 'left', width: '60px', search: false, edittype: 'select' },
                        { name: 'ApprovalDateFrom', index: 'ApprovalDateFrom', align: 'left', search: true, hidden: true, edittype: 'text' },
                        { name: 'ApprovalDateTo', index: 'ApprovalDateTo', align: 'left', search: true, hidden: true, edittype: 'text' },
                        { name: 'Delete', index: 'Delete', width: '20', align: 'center', search: false, hidden: IsDeleteAssigned, sortable: false, edittype: 'text', formatter: deleteformateadorLink }

                      ],
            caption: "Delegation Information",
            rowList: [20, 30, 40, 50, 100],
            pager: $('#jqGridPager'),
            rowNum: 20,
            sortname: 'ID',
            sortorder: 'asc',
            viewrecords: true,
            height: '100%',
            width: '100%'

        });
        
        $("#jqSearch").jqGrid('filterGrid', '#jqGrid', { gridModel: true, gridNames: true, formtype: 'horizontal', autosearch: false, enableSearch: true, enableClear: true });
    });

    function deleteformateadorLink(cellvalue, options, rowObject) {
        var url = '@Html.ActionLink(" ", "Delete", new { id = "_id_" }, new { @class = "deleteItem", @style = "text-decoration: none;" })';
        url = url.replace(/_id_/, rowObject[0]);
        return url;
    }
    function viewformatEdiorLink(cellvalue, options, rowObject) {

        var url = '@Html.ActionLink("_name_", "Edit", new { id = "_id_" })';
        url = url.replace(/_name_/, cellvalue);
        url = url.replace(/_id_/, rowObject[0]);
        return url;
    }

</script>

<script type="text/javascript">
    $(function () {

        $('#sg_ApprovalDateFrom, #sg_ApprovalDateTo').datepicker({ buttonImage: '@Url.Content("~/Content/Images/calendar-blue.gif")', dateFormat: 'dd-mm-yy', buttonImageOnly: true, showOn: "button", buttonText: 'Choose' });
        $('#sg_ComplaintDate').datepicker({ buttonImage: '@Url.Content("~/Content/Images/calendar-blue.gif")', dateFormat: 'dd-mm-yy', buttonImageOnly: true, showOn: "button", buttonText: 'Choose' });
    });

</script>