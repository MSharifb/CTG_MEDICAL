<div>
    @using (Html.BeginForm(Model.ActionType, "ItemInfo", FormMethod.Post, new { id = "frm" }))
    {
        <div class="message">
            @if (!string.IsNullOrEmpty(Model.ErrMsg))
            {
                if (@Model.IsError == 1)
                {
                    <div class="failed">
                        @Model.ErrMsg
                    </div>
                }
                else
                {
                    <div class="success">
                        @Model.ErrMsg
                    </div>
                }
            }
            @Html.ValidationSummary(false, BEPZA_MEDICAL.Web.Utility.Common.ValidationSummaryHead)
        </div>

        @Html.HiddenFor(m => m.Id)
        @*@Html.HiddenFor(m => m.ZoneInfoId)*@
    <div class="GroupBox">

        <div class="row">
            <span class="label">
                @Html.LabelFor(model => model.ItemName)
                <label style='color: red'>*</label>
            </span>
            <span class="field">
                @Html.EditorFor(model => model.ItemName, new { @class = "required" })
            </span>
            <span class="label-right" style="width:45%">
                @foreach (var item in Model.AssetGroupList)
                {
                    <span class="label" style="width:30%">
                        @Html.RadioButtonFor(model => model.AssetGroupId, item.Value)
                        @Html.Label(item.Text)
                    </span>
                }
            </span>
        </div>

        <div class="row">
            <span class="label">
                @Html.LabelFor(model => model.Code)
            </span>
            <span class="field">
                @Html.EditorFor(model => model.Code)
            </span>
            <span class="label-right" style="width:45%">
                <span class="field" style="width:4%">
                    @Html.CheckBoxFor(model => model.IsPeriodicAsset)
                </span>
                <span class="label" style="width:26%">
                    @Html.LabelFor(model => model.IsPeriodicAsset)
                </span>
                    &nbsp;&nbsp;
                <span class="field" style="width:4%">
                    @Html.CheckBoxFor(model => model.IsCondemnableAsset)
                </span>
                <span class="label" style="width:26%">
                    @Html.LabelFor(model => model.IsCondemnableAsset)
                </span>
                    &nbsp;&nbsp;
                <span class="field" style="width:4%">
                    @Html.CheckBoxFor(model => model.HasQuota)
                </span>
                <span class="label" style="width:26%">
                    @Html.LabelFor(model => model.HasQuota)
                </span>
            </span>
        </div>

        <div class="row">
            <span class="label">
                @Html.LabelFor(model => model.CategoryId)
                <label style='color: red'>*</label>
            </span>
            <span class="field">
                @Html.DropDownListFor(m => m.CategoryId, Model.CategoryList, @String.Format("{0}", Content.DDLOptionalLabel()), new { @class = "select-single" })
            </span>
            <span class="label-right">
                @Html.LabelFor(model => model.TypeId)
            </span>
            <span class="field">
                @Html.DropDownListFor(m => m.TypeId, Model.ItemTypeList, @String.Format("{0}", Content.DDLOptionalLabel()), new { @class = "select-single" })
            </span>
        </div>

        <div class="row">
            <span class="label">
                @Html.LabelFor(model => model.UnitId)
            </span>
            <span class="field">
                @Html.DropDownListFor(m => m.UnitId, Model.UnitList, @String.Format("{0}", Content.DDLOptionalLabel()), new { @class = "select-single" })
            </span>
            <span class="label-right">
                @Html.LabelFor(model => model.ModelId)
                @*<label style='color: red'>*</label>*@
            </span>
            <span class="field">
                @Html.DropDownListFor(m => m.ModelId, Model.ModelList, @String.Format("{0}", Content.DDLOptionalLabel()), new { @class = "select-single" })
            </span>
        </div>

        <div class="row">
            <span class="label">
                @Html.LabelFor(model => model.ColorId)
            </span>
            <span class="field">
                @Html.DropDownListFor(m => m.ColorId, Model.ColorList, @String.Format("{0}", Content.DDLOptionalLabel()), new { @class = "select-single" })
            </span>
            <span class="label-right">
                
            </span>
            <span class="field">
                
            </span>
        </div>

        <div class="row">
            <span class="label">
                @Html.LabelFor(model => model.MinimumQuantity)
            </span>
            <span class="field">
                @Html.TextBoxFor(model => model.MinimumQuantity)
            </span>
            <span class="label-right">
                @*@Html.LabelFor(model => model.ManufacturerId)
                <label style='color: red'>*</label>*@
                @Html.LabelFor(model => model.MaximumQuantity)
            </span>
            <span class="field">
                @*@Html.DropDownListFor(m => m.ManufacturerId, Model.ManufacturerList, @String.Format("{0}", Content.DDLOptionalLabel()))*@
                @Html.TextBoxFor(model => model.MaximumQuantity)
            </span>
        </div>

        <div class="row">
            <span class="label">
                @Html.LabelFor(model => model.ReOrderQuantity)
            </span>
            <span class="field">
                @Html.TextBoxFor(model => model.ReOrderQuantity)
            </span>
            <span class="label-right">
                @Html.LabelFor(model => model.Size)
            </span>
            <span class="field">
                @Html.EditorFor(model => model.Size)
            </span>
        </div>

        <div class="row">
            <span class="label">
                @Html.LabelFor(model => model.Description)
            </span>
            <span class="field">
                @Html.TextAreaFor(model => model.Description)
            </span>
            <span class="label-right">
                @Html.LabelFor(model => model.Remarks)
            </span>
            <span class="field">
                @Html.TextAreaFor(model => model.Remarks)
            </span>
        </div>

        <div class="clear"></div>
    </div>

        <div class="GroupBox">
            <div class="button-crude">
                @if ((new BEPZA_MEDICAL.Web.Utility.AppConstant()).IsAddAssigned)
                {
                    <input type="submit" value="Save" id="btnSave" name="btnSubmit" style="margin-right: 8px;" />
                    <input type="submit" value="Update" id="btnUpdate" name="btnSubmit" />
                }
                <input type="button" value="Clear" id="btnClear" name="btnClear" />
            </div>
            <div class="clear">
            </div>
        </div>
    }
</div>

<div class="button-crude button-left" style="margin: 5px">
    @Html.ActionLink("Back to List", "Index", "ItemInfo")
</div>
