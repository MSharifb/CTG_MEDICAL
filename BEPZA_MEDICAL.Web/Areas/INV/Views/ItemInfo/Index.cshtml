@{ ViewBag.Title = "jqGrid in ASP.NET MVC - Searching [Custom]"; }
@{
    ViewBag.Title = "Item Information";
    Layout = "~/Areas/INV/Views/Shared/_Layout.cshtml";
}
<script type="text/javascript">


    $(function () {
        $("a.deleteItem").live("click", function () {
            deleteLinkObj = $(this);  //for future use
            $('#delete-dialog').dialog('open');
            return false; // prevents the default behaviour
        });

    });

</script>
@using (Ajax.BeginForm("Index", "ItemInfo", new AjaxOptions { HttpMethod = "POST" }, new { id = "frm" }))
{
    <div class="GroupBox" style="max-height: 25px" id="message">
    </div>
    <table align="center" width="100%">
        <tr id="Search Area">
            <td>
                <fieldset>
                    <div id="jqSearch">
                    </div>
                </fieldset>
            </td>
        </tr>
        <tr>
            <td>
                <div class="button-crude button-left" style="margin: 5px 0px">
                    @if ((new BEPZA_MEDICAL.Web.Utility.AppConstant()).IsAddAssigned)
                    {
                        @Html.ActionLink("Add New", "Create", "ItemInfo")
                    }
                </div>
            </td>
        </tr>
        <tr id="GridView Area">
            <td align="center">
                <table id="jqGrid" width="100%"></table>
                <div id="jqGridPager" style="text-align: center;">
                </div>
            </td>
        </tr>
    </table>
}
<script src="@Url.Content("~/Scripts/jquery.jqGrid.addons-4.1.2.js")" type="text/javascript"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $('#jqGrid').jqGrid({
            url: '@Url.Action("GetItemInfo")',
            autowidth: true,
            datatype: 'json',
            mtype: 'POST',
            colNames: ['ID', 'Item', 'Type', 'Type', 'Category', 'Asset Group', 'Code', 'Delete'],
            colModel: [
                        { name: 'ID', index: 'ID', align: 'left', search: false, hidden: true, edittype: 'text' },
                        { name: 'ItemName', index: 'ItemName', width: '100', align: 'left', search: true, edittype: 'text', formatter: viewformatEdiorLink },
                        { name: 'Type', index: 'Type', width: '100', align: 'left', search: false, edittype: 'text' },
                         { name: 'TypeId', index: 'TypeId', width: '100', align: 'left', search: true, hidden: true, edittype: 'select', surl: '@Url.Action("GetTypeList")' },
                        { name: 'CategoryId', index: 'CategoryId', width: '100', align: 'left', search: true, hidden: true, edittype: 'select', surl: '@Url.Action("GetCategoryList")' },
                        { name: 'AssetGroupId', index: 'AssetGroupId', width: '100', align: 'left', search: true, hidden: true, edittype: 'select', surl: '@Url.Action("GetAssetGroupList")' },
                        { name: 'Code', index: 'Code', width: '50', align: 'left', search: false, edittype: 'text' },
                        { name: 'Delete', index: 'Delete', width: '20', align: 'center', search: false, hidden: IsDeleteAssigned, sortable: false, edittype: 'text', formatter: deleteformateadorLink }

                      ],
            caption: "Item Information",
            rowList: [20, 30, 40, 50, 100],
            pager: $('#jqGridPager'),
            rowNum: 20,
            sortname: 'ID',
            sortorder: 'asc',
            viewrecords: true,
            height: '100%',
            width: '100%'

        });
        $("#jqSearch").jqGrid('filterGrid', '#jqGrid', { gridModel: true, gridNames: true, formtype: 'horizontal', autosearch: false, enableSearch: true, enableClear: true });
    });

    function deleteformateadorLink(cellvalue, options, rowObject) {
        var url = '@Html.ActionLink(" ", "Delete", new { id = "_id_" }, new { @class = "deleteItem", @style = "text-decoration: none;" })';
        url = url.replace(/_id_/, rowObject[0]);
        return url;
    }
    function viewformatEdiorLink(cellvalue, options, rowObject) {

        var url = '@Html.ActionLink("_name_", "Edit", new { id = "_id_" })';
        url = url.replace(/_name_/, cellvalue);
        url = url.replace(/_id_/, rowObject[0]);
        return url;
    }

</script>
