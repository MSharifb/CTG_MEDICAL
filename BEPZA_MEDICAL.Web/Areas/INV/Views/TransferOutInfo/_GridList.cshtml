                            { name: 'TransferredToZone', index: 'TransferredToZone', align: 'left', search: true, hidden: true, edittype: 'text' },
                            { name: 'TransferNo', index: 'TransferNo', align: 'left', search: true, width: '50px', edittype: 'text', formatter: viewformatEdiorLink },
                            { name: 'ChallanNo', index: 'ChallanNo', align: 'left', search: true, width: '50px', edittype: 'text' },
                            { name: 'TransferDate', index: 'TransferDate', align: 'center', search: false, width: '50px', edittype: 'text' },
                            { name: 'ChallanDate', index: 'ChallanDate', align: 'center', search: false, width: '50px', edittype: 'text' },
                            { name: 'TransferredToZone', index: 'TransferredToZone', align: 'left', search: false, width: '60px', edittype: 'select' },
                            { name: 'TransferredByEmp', index: 'TransferredByEmp', align: 'left', search: false, width: '60px', edittype: 'select' },
                            { name: 'Comment', index: 'Comment', align: 'left', search: false, width: '100px', edittype: 'select' },
                            { name: 'Delete', index: 'Delete', align: 'right', search: false, hidden: IsDeleteAssigned, sortable: false, width: '20px', edittype: 'image', formatter: deleteformateadorLink }
                            
            ],
            autowidth: true,
            caption: "Item Transfer Info",
            rowList: [20, 30, 40, 50, 100],
            pager: $('#jqGridPager'),
            rowNum: 20,
            viewrecords: true,
            height: '100%',
            width: '50%'
