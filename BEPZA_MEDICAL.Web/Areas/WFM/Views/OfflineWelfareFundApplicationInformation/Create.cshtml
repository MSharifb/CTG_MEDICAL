@model BEPZA_MEDICAL.Web.Areas.WFM.ViewModel.OfflineWelfareFundApplicationInformationViewModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/WFM/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Create", "OfflineWelfareFundApplicationInformation", FormMethod.Post, new { id = "frm", @encType = "multipart/form-data" }))
{
    <fieldset>
        <div class="GroupBox" id="message">
            @Html.ValidationSummary(false, BEPZA_MEDICAL.Web.Utility.Common.ValidationSummaryHead)
            @if (!string.IsNullOrEmpty(Model.ErrMsg))
            {
                <div id="ErrMsg" class="@Model.errClass">
                    @Model.ErrMsg
                </div>
            }
        </div>
        @Html.Partial("_CreateOrEdit", Model)
        <div class="form-horizontal">
            <div class="form-group">
                <div class="col-sm-10 col-sm-offset-2 text-right">
                    @if ((new BEPZA_MEDICAL.Web.Utility.AppConstant()).IsAddAssigned)
                    {
                        <button class="btn btn-success" id="btnSave"><i class="fa fa-save"></i> Save</button>
                    }
                    @if (Model.Id > 0)
                    {
                        <a class="btn btn-info" id="btnPrintPreview" onclick="ViewApplicantInfo(this,@Model.Id,'offline')"> <i class="fa fa-print"></i> Print Preview</a>
                    }
                    <a href="@Url.Action("Index")" class="btn btn-warning"> <i class="fa fa-backward"></i> Back</a>
                </div>
            </div>
        </div>
    </fieldset>
}

