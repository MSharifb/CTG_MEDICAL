<style>
    .ui-datepicker-trigger {
        z-index: 1000;
    }
</style>
<script type="text/javascript">

    $(document).ready(function () {

        $('#jqGrid').jqGrid({
            url: '@Url.Action("GetList")',
            datatype: 'json',
            mtype: 'POST',
            colNames: ['Id', 'Payment Order No.', 'Order Date', 'Meeting Ref. No.', 'Meeting Ref. No.','Details','Edit', 'Delete'],
            colModel: [
            { name: 'Id', index: 'Id', align: 'left', search: false, hidden: true, edittype: 'text' },
            { name: 'PayOrderNo', index: 'PayOrderNo', align: 'center', width: '100px', search: true, edittype: 'text' },
            { name: 'PayOrderDate', index: 'PayOrderDate', align: 'center', width: '120px', search: true, edittype: 'text' },
            { name: 'ApprovalWelfareFundInfoId', index: 'ApprovalWelfareFundInfoId', align: 'center', width: '100px', search: true, hidden: true, edittype: 'select', surl: '@Url.Action("AprrovalWelfareFundRefNoListView")' },
            { name: 'ApprovalWelfareFundInfoRefNo', index: 'ApprovalWelfareFundInfoRefNo', align: 'Center', width: '100px', search: false, edittype: 'text' },
            { name: 'Details', index: 'Details', align: 'center', search: false, sortable: false, width: '50px', edittype: 'image', formatter: DetailformateadorLink },
            { name: 'Edit', index: 'Edit', align: 'center', search: false, sortable: false, width: '50px', edittype: 'image', formatter: ViewformateadorLink },
            { name: 'Delete', index: 'Delete', align: 'Center', search: false, hidden: IsDeleteAssigned, sortable: false, width: '40px', edittype: 'image', formatter: deleteformateadorLink }
            ],
            autowidth: true,
            caption: "Payment Information",
            rowList: [20, 30, 40, 50, 100],
            pager: $('#jqGridPager'),
            rowNum: 20,
            viewrecords: true,
            height: '100%',
            width: '50%',
            loadComplete: function () {
                $("a.deleteItem").on('click', function (e) {
                    e.preventDefault();
                    deleteLinkObj = $(this);  //for future use
                    $('#delete-dialog').dialog('open');
                    return false; // prevents the default behaviour
                });
            }
        });
        // Pager Function
        $("#jqSearch").jqGrid('filterGrid', '#jqGrid', { gridModel: true, gridNames: true, formtype: 'horizontal', autosearch: false, enableSearch: true, enableClear: true });
        $('#sg_PayOrderDate').datepicker({ buttonImage: '@Url.Content("~/Content/Images/calendar-blue.gif")', dateFormat: 'dd-mm-yy', changeMonth: true, changeYear: true, buttonImageOnly: true, showOn: "button", buttonText: 'Choose' });
    });

    function deleteformateadorLink(cellvalue, options, rowObject) {
        var url = '@Html.ActionLink(" ", "Delete", new { id = "_id_" }, new { @class = "deleteItem" })';
        url = url.replace(/_id_/, rowObject[0]);
        return url;
    }

    function ViewformateadorLink(cellvalue, options, rowObject) {
        var url = '@Html.ActionLink(" ", "Edit", new { id = "_id_" }, new { @class = "editItem", @style = "text-decoration: none;" })';
        url = url.replace(/_name_/, cellvalue);
        url = url.replace(/_id_/, rowObject[0]);       
        return url;
    }

    function DetailformateadorLink(cellvalue, options, rowObject) {
        var url = '@Html.ActionLink(" ", "PaymentDetails", new { id = "_id_" }, new { @class = "fa fa-lg fa-tasks", style = "text-decoration: none !important;" })';
        url = url.replace(/_name_/, cellvalue);
        url = url.replace(/_id_/, rowObject[0]);
        return url;
    }

</script>

<script type="text/javascript">

    function handleDeleteSuccess() {
    }
    function handleDeleteFailure() {
        $("#message").show().html('There is an Ajax call back error!');
    }
    function JsonDelete_OnComplete(context) {
        var obj = eval("(" + context.responseText + ")");
        if (obj.Success) {
            $("#message").show().html("<b>" + obj.Message + "</b>").css("color", "Green");
            $('#sButton').trigger('click');
        }
        else {
            $("#message").show().html("<b>" + obj.Message + "</b>").css("color", "red");
        }
    }

</script>

