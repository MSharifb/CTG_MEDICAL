@model BEPZA_MEDICAL.Web.Areas.PRM.ViewModel.OrderTypeInfoViewModel

@{
    Layout = null;
}

<div class="GroupBox">

    <div class="row">
        <span class="label">
            @Html.HiddenFor(model => model.Id)
            @Html.LabelFor(model => model.Name)
            <label class="required-field">
                *
            </label>
        </span>
        <span class="field">
            @Html.TextBoxFor(model => model.Name)
        </span>
    </div>

    <div class="row">
        <span class="label">
            @Html.LabelFor(model => model.Remarks)
        </span>
        <span class="field">
            @Html.EditorFor(model => model.Remarks)
        </span>
        <div class="clear">
        </div>
    </div>
    <div class="row">
        <span class="label">
            @Html.LabelFor(model => model.IsFinalOrder)
        </span>
        <span class="field">
            @Html.CheckBoxFor(model => model.IsFinalOrder)
        </span>

    </div>
    <div class="row">
        <span class="label">
            @Html.LabelFor(model => model.SortOrder)
            <label class="required-field">
                *
            </label>
        </span>
        <span class="field">
            @Html.TextBoxFor(model => model.SortOrder)
        </span>

    </div>
</div>
<div class="clear">
</div>


<script type="text/javascript">

    $(function () {
        var Url = window.location.href;
        $("#btnClear").live("click", function (event) {
            event.preventDefault();
            window.location.href = Url;
        });
    });

</script>
