@model BEPZA_MEDICAL.Web.Areas.PRM.ViewModel.EmployeeActivationViewModel
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/PRM/Views/Shared/_Layout.cshtml";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm("Edit", "EmployeeActivation", FormMethod.Post, new { id = "frm", @encType = "multipart/form-data" }))
{   
    <fieldset>
        @Html.HiddenFor(model => model.Id)
        @Html.Partial("_CreateOrEdit", Model)       
        <div class="button-crude">
        @if ((new BEPZA_MEDICAL.Web.Utility.AppConstant()).IsEditAssigned)
        {
            <input type="submit" value="Update" id="btnSave" name="btnSubmit" style="margin-right: 8px;" />
        }
        <input type="button" value="Clear" id="btnClear" name="btnClear" />
        </div>
    </fieldset>
}
<div class="button-crude button-left">
    @Html.ActionLink("Back to List", "Index")
</div>
