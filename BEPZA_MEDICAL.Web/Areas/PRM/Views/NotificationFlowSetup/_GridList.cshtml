<script type="text/javascript">

    $(document).ready(function () {

        $('#jqGrid').jqGrid({
            url: '@Url.Action("GetList", "NotificationFlowSetup")',
            datatype: 'json',
            mtype: 'POST',
            colNames: ['ID', 'Notification Type', 'Module', 'Group/Individual', 'Organogram Level', 'O.L.H', 'Employee Id & Name', 'Designation', 'Reminder?', 'R.B.D.',  'Delete'],
            colModel: [

                { name: 'ID', index: 'ID', align: 'left', search: false, hidden: true, edittype: 'text' },

                { name: 'NotificationTypeName', index: 'NotificationTypeName', align: 'Center', width: '100px', formatter: viewformatEdiorLink, search: true, edittype: 'select', surl: '@Url.Action("GetNotificationTypeList")' },

                { name: 'ModuleName', index: 'ModuleName', align: 'left', width: '120px', search: true, edittype: 'select', surl: '@Url.Action("GetModuleList")' },

                { name: 'GroupOrIndividual', index: 'GroupOrIndividual', align: 'center', width: '70px', search: true, edittype: 'select', surl: '@Url.Action("GetNotificationReceiverTypeList")' },
                { name: 'OrganogramLevelName', index: 'OrganogramLevelName', align: 'left', width: '120px', hidden: false, search: false },

                { name: 'OnlyLevelHead', index: 'OnlyLevelHead', align: 'center', width: '50px', search: false, formatter: 'checkbox' },

                { name: 'EmployeeName', index: 'EmployeeName', align: 'left', width: '120px', search: true },

                { name: 'Designation', index: 'Designation', align: 'left', width: '100px', search: true, edittype: 'select', surl: '@Url.Action("GetDesignationInfo")' },

                { name: 'HasReminder', index: 'HasReminder', align: 'center', width: '50px', search: false, formatter: 'checkbox' },

                { name: 'ReminderBeforeDays', index: 'ReminderBeforeDays', align: 'right', width: '40px', search: false },

                { name: 'Delete', index: 'Delete', align: 'center', search: false, hidden: IsDeleteAssigned, sortable: false, width: '30px', edittype: 'image', formatter: deleteformateadorLink }

            ],
            autowidth: true,
            caption: "Notification Flow",
            rowList: [20, 30, 40, 50, 100],
            pager: $('#jqGridPager'),
            rowNum: 20,
            sortname: 'NotificationTypeName',
            sortorder: 'asc',
            viewrecords: true,
            height: '100%',
            width: '100%',
            loadComplete: function () {
                $("a.deleteItem").on('click', function (e) {
                    e.preventDefault();
                    deleteLinkObj = $(this);  //for future use
                    $('#delete-dialog').dialog('open');
                    return false; // prevents the default behaviour
                });
            }

        });
        // Pager Function
        $("#jqSearch").jqGrid('filterGrid', '#jqGrid', { gridModel: true, gridNames: true, formtype: 'horizontal', autosearch: false, enableSearch: true, enableClear: true });

    });

    function deleteformateadorLink(cellvalue, options, rowObject) {
        var url = '@Html.ActionLink(" ", "Delete", new { id = "_id_" }, new { @class = "deleteItem" })';
        url = url.replace(/_id_/, rowObject[0]);
        return url;

    }
    function viewformatEdiorLink(cellvalue, options, rowObject) {
        var url = '@Html.ActionLink("_name_", "Edit", new { id = "_id_" })';
        url = url.replace(/_name_/, cellvalue);
        url = url.replace(/_id_/, rowObject[0]);
        return url;
    }

</script>

