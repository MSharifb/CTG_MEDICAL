        e.preventDefault();

        var url = $(this).attr('href');
        $.ajax({
            url: url,
            type: 'POST',
            error: function () {
                alert('System is unable to load data please try again.');
            },
            success: function (result) {
                $('#divApplicantInfo').html(result);
            }
        });

        $("#divApplicantInfo").dialog('open');
        return false;

