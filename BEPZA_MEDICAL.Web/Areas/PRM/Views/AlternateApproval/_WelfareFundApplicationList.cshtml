@model List<BEPZA_MEDICAL.Web.Areas.PRM.ViewModel.RequestedApplication.RequestedApplicationViewModel>

<table class="table table-bordered table-hovered table-responsive">
    <thead>
        <tr>
            <th class="checkItem">@Html.CheckBox("ChkAll", "false")</th>
            <th class="application-Date">Apply Date</th>
            <th class="applicant-Id">Applicant ID</th>
            <th class="applicant-Name">Applicant Name</th>
            <th class="requested-amount">Requested Amount</th>
            <th class="approval-status">Status</th>
            <th class="approver-action">&nbsp;</th>
            <th>&nbsp;</th>
        </tr>
    </thead>
    <tbody>


        @if (Model != null && Model.Count > 0)
        {
            foreach (var item in Model)
            {
                @Html.Partial("_WelfareFundApplication", item)
            }
        }
    </tbody>
</table>


<script type="text/javascript">
    $('table thead tr input[type=checkbox]').on('change', function () {
        //debugger;
        var isChecked = $(this).is(':checked');
        ToggleCheckBox(isChecked);
    });

    function ToggleCheckBox(isChecked) {
        $('table tbody tr .checkItem').find("input[type=checkbox]").each(function () {
            $(this).prop('checked', isChecked);
        })

    }
</script>

