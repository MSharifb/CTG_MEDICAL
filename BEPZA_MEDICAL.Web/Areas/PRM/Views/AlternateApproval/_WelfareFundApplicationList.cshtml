            color: #000000;
            font-family: Tahoma;
            font-weight: bold;
            font-size: 12px;
            cursor: default;
        }

            table thead:hover {
                cursor: default;
            }

            table thead th {
                text-align: center;
                padding: 5px 2px !important;
            }

        table tbody tr:hover {
            background: #eceff5;
            color: #000000;
        }

    .checkItem {
        width: 50px;
        text-align: center;
    }

    .application-Date {
        width: 120px;
        max-width: 120px;
    }

    .applicant-Id {
        width: 100px;
        max-width: 100px;
    }

    .applicant-Name {
        max-width: 400px;
        min-width: 200px;
        word-wrap: break-word;
    }

    .requested-amount {
        width: 150px;
        max-width: 150px;
        padding-right: 10px !important;
    }

    td.requested-amount {
        text-align: right;
    }

    .approval-status {
