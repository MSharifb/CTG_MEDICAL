@model BEPZA_MEDICAL.Web.Areas.PRM.ViewModel.EmpClearanceInfoFormDetailsViewModel

@{
    ViewBag.Title = "Create";
    //Layout = "~/Areas/PRM/Views/Shared/_Layout.cshtml";
    Layout = null;
}


@using (Html.BeginForm("AddChecklist", "EmployeeClearanceInfo", FormMethod.Post, new { id = "frmEmpChekList" }))
{

    <fieldset>
        <div class="GroupBox" id="messagePopupWindow" style="min-height:15px;">
            @Html.ValidationSummary(false, BEPZA_MEDICAL.Web.Utility.Common.ValidationSummaryHead)
            @if (!string.IsNullOrEmpty(Model.ErrMsg))
            {
                <div id="ErrMsg" class="@Model.ErrMsg">
                    @Model.ErrMsg
                </div>
            }
        </div>
        @Html.Partial("_CreateOrEditCheckList", Model)
        <div class="button-crude">
            @if ((new BEPZA_MEDICAL.Web.Utility.AppConstant()).IsAddAssigned)
            {
                <input type="submit" value="Save" id="btnAdChekList" name="btnSubmit" style="margin-right: 8px;" />
            }
            @*<input type="button" value="Clear" id="btnClear" name="btnClear" />*@
        </div>
    </fieldset>
}
