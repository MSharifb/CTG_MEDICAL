
<script type="text/javascript">
    $(document).ready(function () {

        $('#jqGrid').jqGrid({
            url: '@Url.Action("GetList")',
            datatype: 'json',
            mtype: 'POST',
            colNames: ['Reference No.', 'Reference No.', 'Reference Date', 'Financial Year', ' Prepared By', 'Status Designation', 'Financial Year', 'Status', 'Delete'],
            colModel: [
                  { name: 'Id', index: 'Id', align: 'left', width: '60px', search: true, hidden: true, edittype: 'select', surl: '@Url.Action("ReferenceNoforView")' },
                  { name: 'ReferenceNo', index: 'ReferenceNo', align: 'center', width: '60px', search: false, edittype: 'select', formatter: viewformatEdiorLink },
                  { name: 'ReferenceDate', index: 'ReferenceDate', align: 'center', width: '60px', search: true, edittype: 'text' },
                  { name: 'FinancialYearId', index: 'FinancialYearId', align: 'center', width: '60px', search: true, hidden: true, edittype: 'select', surl: '@Url.Action("FinancialYearforView")' },
                  { name: 'PreparedBy', index: 'PreparedBy', align: 'left', width: '60px', search: true, edittype: 'text' },
                  { name: 'Designation', index: 'Designation', align: 'left', width: '60px', search: false, edittype: 'text' },
                  { name: 'FinancialYear', index: 'FinancialYear', align: 'center', width: '60px', search: false, edittype: 'text' },
                  { name: 'Status', index: 'Status', align: 'center', width: '60px', search: false, edittype: 'text' },
                  { name: 'Delete', index: 'Delete', align: 'right', search: false, hidden: IsDeleteAssigned, sortable: false, width: '40px', edittype: 'image', formatter: deleteformateadorLink }
            ],
            autowidth: true,
            caption: "Summary of Job Requisition Information",
            rowList: [20, 30, 40, 50, 100],
            pager: $('#jqGridPager'),
            rowNum: 20,
            viewrecords: true,
            height: '100%',
            width: '50%'
        });
        $("#jqSearch").jqGrid('filterGrid', '#jqGrid', { gridModel: true, gridNames: true, formtype: 'horizontal', autosearch: false, enableSearch: true, enableClear: true });

    });
    function deleteformateadorLink(cellvalue, options, rowObject) {
        if (rowObject[07] == 'Pending') {
            var url = '@Html.ActionLink(" ", "Delete", new { id = "_id_" }, new { @class = "deleteItem" })';
            url = url.replace(/_id_/, rowObject[0]);
            return url;
        }
        return "";
    }
    function viewformatEdiorLink(cellvalue, options, rowObject) {
        if (rowObject[07] == 'Pending') {
            var url = '@Html.ActionLink("_name_", "Edit", new { id = "_id_" })';
            url = url.replace(/_name_/, cellvalue);
            url = url.replace(/_id_/, rowObject[0]);
            return url;
        }
        return rowObject[1];
    }
</script>
