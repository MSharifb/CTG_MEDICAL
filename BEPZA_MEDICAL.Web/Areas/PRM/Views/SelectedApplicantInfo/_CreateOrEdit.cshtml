<script type="text/javascript">
    $(function () {
        var mode = $("#strMode").val();
        if (mode == 'Edit') {
            $("#btnSave").attr('value', 'Update');
            $("#btnClear").hide();
        }
    });

    $('#JobAdvertisementInfoId').live("change", function (e) {
        $('#grid tbody').empty();
        $(".tblOrderList tbody").empty();

        var jobAdId = $(this).val();
        getJobPost(jobAdId);
        GetExamType(jobAdId);
    });
    var loadEmpUrl = "@Url.Action("GetJobPost")";
    function getJobPost(jobAdId) {
        if (jobAdId != "" && jobAdId != undefined) {
            $.ajax({
                type: "GET",
                url: loadEmpUrl,
                data: { jobAdId: jobAdId },
                success: (function (result) {
                    $("#grid tbody").html(result);
                })
            });
        }
    }

    function GetExamType(jobAdId) {
        var selectionCriteriaExamType = $('#SelectionCriteriaExamTypeId');
        selectionCriteriaExamType.empty();

        selectionCriteriaExamType.append($('<option/>', {
            value: '', text: '@Content.DDLOptionalLabel()'
        }));

        if (jobAdId != null && jobAdId != '') {
            $.getJSON('@Url.Action("SelectionCriteriaExamType")', { jobAdId: jobAdId }, function (desigs) {
                $.each(desigs, function (index, desig) {
                    selectionCriteriaExamType.append($('<option/>', {
                        value: desig.Id,
                        text: desig.Name
                    }));
                });
            });
        }
    }

    $(".chkIndividual").live('click', function () {
        if ($(this).attr('checked')) {
            var val = $(this).val();
            if (val == "True") {
                $(".tblOrderList tbody tr").each(function () {
                    var row = this;
                    var passmark = $(this).find(".pass-mark").html();
                    var obtainmark = $(this).find(".obtain-mark").html();
                    if (obtainmark >= passmark) {
                        $(row).show();
                    }
                    else {
                        $(row).hide();
                    }

                });

            } else {
                $(".tblOrderList tbody tr").each(function () {
                    var row = this;
                    var passmark = $(this).find(".pass-mark").html();
                    var obtainmark = $(this).find(".obtain-mark").html();
                    if (obtainmark >= passmark) {
                        $(row).show();
                    }
                    else {
                        $(row).show();
                    }

                });
            }
        }
    });

</script>

<script type="text/javascript">
    var designation = [];

    $(function () {

        var RequisitionInfo = new Array();
        var addRequisitionInfo = "@Url.Action("AddedApplicantInfo")";

        $(".rchk").live('click', function () {
            if ($(this).attr('checked')) {
                RequisitionInfo.push($(this).val());
