                type: 'POST',
                dataType: 'json',
                data: {
                    selectionCriteriaExamTypeId: selectionCriteriaExamTypeId,
                    jobAdvertisementId: jobAdvertisementId
                },
                success: function (response) {

                    var isFinal = (response.IsFinalExam);
                    $('#IsFinalExam').val(response.IsFinalExam);

                    if (isFinal == false) {
                        $('.forFinal').hide();
                    }
                    else {
                        $('.forFinal').show();
                    }
                },

                failure: function (response) {
                    //alert(response.d);
                }
            });

        }

    });

</script>
