@model BEPZA_MEDICAL.Web.Areas.PRM.ViewModel.SelectedApplicantInfoViewModel
@using BEPZA_MEDICAL.Web.Helpers

@{
    Layout = null;
}

<fieldset>
    <div class="row">
        <span class="label">
            @Html.HiddenFor(model => model.Id)
            @Html.HiddenFor(model => model.strMode)
            @Html.HiddenFor(model => model.DesignationId)
            @Html.HiddenFor(model => model.IsFinalExam)
            @Html.LabelFor(model => model.JobAdvertisementInfoId, new { @class = "label-required" })
        </span><span class="field">
            @Html.DropDownListFor(model => model.JobAdvertisementInfoId, Model.AdvertisementCodeList, @String.Format("{0}", Content.DDLOptionalLabel()), new { @class = "required", @onchange = "LoadExamType();" })
        </span>
        @if (Model.strMode == "Create")
        {
            <span class="label-right">
                @Html.LabelFor(model => model.CandidateType)
            </span>
            <span class="field">
                @Html.RadioButtonFor(m => m.CandidateType, true, new { @checked = true, @class = "chkIndividual" })
                @Html.Label("Passed Candidate")
            </span>
            <span class="label-right" style="visibility: hidden">
                @Html.LabelFor(model => model.CandidateType)
            </span>
            <span class="field" style="float:right;margin-right:11%">
                @Html.RadioButtonFor(m => m.CandidateType, false, new { @class = "chkIndividual" })
                @Html.Label("All Candidate")
            </span>
        }
    </div>
    <div class="row">
        <span class="label">
            @Html.LabelFor(model => model.SelectionCriteriaExamTypeId, new { @class = "label-required" })
        </span><span class="field">
            @Html.DropDownListFor(model => model.SelectionCriteriaExamTypeId, Model.SelectionCriteriaExamTypeList, @String.Format("{0}", Content.DDLOptionalLabel()), new { @class = "required" })
        </span>
    </div>
</fieldset>
