
@*
    Popup Employee Search Screen.
    --------------------------------
    This view is mainly using at PGM module. 
    LoggedInZoneId is comparing with SalaryWithDrawFrom field during getting employee list.
*@

@model BEPZA_MEDICAL.Web.Areas.PRM.ViewModel.EmployeeSearchViewModel
@{
    
    ViewBag.Title = "Index";
    Layout = null;
}
<script src="@Url.Content("~/Scripts/jquery.jqGrid.addons-4.1.2.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>
@using (Ajax.BeginForm("Index", "Employee", new AjaxOptions { HttpMethod = "POST" }, new { id = "frm" }))
{
    <div id="message">
        @if (!string.IsNullOrEmpty(Model.Message))
        {
            <div class="success">
                @Model.Message
            </div>
        }
    </div>
    <div class="GroupBox" id="dvEmpSearchType">
        @Html.RadioButtonFor(x => x.EmployeeStatus, 0, new { id = "AllEmployee", @class = "empStatus" })
        <label for="paiement_cash">
            All Employee</label>
        @Html.RadioButtonFor(x => x.EmployeeStatus, 1, new { id = "ActiveEmployee", @class = "empStatus" })
        <label for="paiement_cash">
            Active Employee</label>
        @Html.RadioButtonFor(x => x.EmployeeStatus, 2, new { id = "InactiveEmployee", @class = "empStatus" })
        <label for="paiement_cash">
            Inactive Employee</label>
    </div>
    <fieldset>
        <div id="jqSearch">
        </div>
    </fieldset> 
    <br />   
    <table id="jqGrid" cellpadding="0" cellspacing="0">
    </table>
    <div id="jqGridPager" style="text-align: center;">
    </div>  
    <div id="divList">
        @Html.Partial("_EmployeeSearchGridListForPGM", Model)
    </div>   
   
}
