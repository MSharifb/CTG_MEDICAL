@{
    ViewBag.Title = "Designation";
    Layout = "~/Areas/PRM/Views/Shared/_Layout.cshtml";
}

<script src="@Url.Content("~/Scripts/jquery.jqGrid.addons-4.1.2.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>
@using (Ajax.BeginForm("Index", "DivisionHeadMaping", new AjaxOptions { HttpMethod = "POST" }, new { id = "frm" }))
{   
    <table align="center" width="100%">

        
        <tr>
            <td>
                 @Html.Partial("CreateOrEdit")
            </td>
        </tr>
        <tr id="GridView Area">
            <td align="center">
                <table id="jqGrid" width="100%">
                </table>
                <div id="jqGridPager" style="text-align: center;">
                </div>
            </td>
        </tr>
    </table>     
}

<script type="text/javascript">
    $(document).ready(function () {
        $('#jqGrid').jqGrid({
            url: '@Url.Action("GetList")',
            autowidth: true,
            datatype: 'json',
            mtype: 'POST',
            colNames: ['ID', 'Designation', 'Rank', 'Delete'],
            colModel: [
                        { name: 'ID', index: 'ID', align: 'left', search: false, hidden: true, edittype: 'text' },
                        { name: 'Name', index: 'Name', align: 'left', search: false, edittype: 'text', formatter: viewformatEdiorLink },
                        { name: 'Rank', index: 'Rank', width: 30, align: 'right', search: false, edittype: 'text' },
                        { name: 'Delete', index: 'Delete', width: '20', align: 'left', search: false, hidden: IsDeleteAssigned, sortable: false, edittype: 'text', formatter: deleteformateadorLink }

                      ],
            caption: "Head of Division Mapping List",
            rowList: [20, 30, 40, 50, 100],
            pager: $('#jqGridPager'),
            rowNum: 20,
            sortname: 'ID',
            sortorder: 'asc',
            viewrecords: true,
            height: '100%',
            width: '100%'

        });
        $("#jqSearch").jqGrid('filterGrid', '#jqGrid', { gridModel: true, gridNames: true, formtype: 'horizontal', autosearch: false, enableSearch: false, enableClear: false });
    });

    function deleteformateadorLink(cellvalue, options, rowObject) {
        var url = '@Html.ActionLink(" ", "Delete", new { id = "_id_" }, new { @class = "deleteItem", @style = "text-decoration: none;" })';
        url = url.replace(/_id_/, rowObject[0]);
        return url;
    }
    function viewformatEdiorLink(cellvalue, options, rowObject) {

        var url = '@Html.ActionLink("_name_", "Edit", new { id = "_id_" })';
        url = url.replace(/_name_/, cellvalue);
        url = url.replace(/_id_/, rowObject[0]);
        return url;
    }
   
</script>
<script type="text/javascript">

    $(function () {
        $("a.deleteItem").live("click", function () {
            deleteLinkObj = $(this);  //for future use
            $('#delete-dialog').dialog('open');
            return false; // prevents the default behaviour
        });

    });

</script>