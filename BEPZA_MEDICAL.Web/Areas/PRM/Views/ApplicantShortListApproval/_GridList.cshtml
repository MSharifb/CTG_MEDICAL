<script type="text/javascript">

    $(document).ready(function () {

        $('#jqGrid').jqGrid({
            url: '@Url.Action("GetList")',
            datatype: 'json',
            mtype: 'POST',
            colNames: ['Id', 'Advertisement Code', 'Advertisement Code', 'Approve Date', 'Approved By', 'Status Designation', 'Status Designation', 'Status', 'Delete'],
            colModel: [
                    { name: 'Id', index: 'Id', align: 'left', search: false, hidden: true, edittype: 'text' },
                    { name: 'JobAdvertisementInfoId', index: 'JobAdvertisementInfoId', align: 'center', width: '60px', search: true, hidden: true, edittype: 'select', surl: '@Url.Action("GetJobAdvertisement")' },
                    { name: 'JobAdvertisementCode', index: 'JobAdvertisementCode', align: 'center', search: false, edittype: 'text', formatter: viewformatEdiorLink },
                    { name: 'Date', index: 'Date', align: 'center', width: '60px', search: true, edittype: 'text' },
                    { name: 'EmployeeName', index: 'EmployeeName', align: 'left', width: '140px', search: true, edittype: 'text' },

                    { name: 'DesignationId', index: 'DesignationId', align: 'left', width: '60px', search: true, hidden: true, edittype: 'select', surl: '@Url.Action("DesignationListView")' },
                    { name: 'Designation', index: 'Designation', align: 'center', width: '140px', search: false, edittype: 'text' },
                    { name: 'Status', index: 'Status', align: 'center', width: '60px', search: false, edittype: 'text' },
                    { name: 'Delete', index: 'Delete', align: 'Center', search: false, hidden: IsDeleteAssigned, sortable: false, width: '40px', edittype: 'image', formatter: deleteformateadorLink }
            ],
            autowidth: true,
            caption: "Approval of Short Listed Applicant Information",
            rowList: [20, 30, 40, 50, 100],
            pager: $('#jqGridPager'),
            rowNum: 20,
            viewrecords: true,
            height: '100%',
            width: '50%'
        });
        // Pager Function
        $("#jqSearch").jqGrid('filterGrid', '#jqGrid', { gridModel: true, gridNames: true, formtype: 'horizontal', autosearch: false, enableSearch: true, enableClear: true });

    });

    function deleteformateadorLink(cellvalue, options, rowObject) {
        if (rowObject[07] == 'Rejected') {
            var url = '@Html.ActionLink(" ", "Delete", new { id = "_id_" }, new { @class = "deleteItem" })';
            url = url.replace(/_id_/, rowObject[0]);
            return url;
        }
        return "";
    }
    function viewformatEdiorLink(cellvalue, options, rowObject) {
        if (rowObject[07] == 'Rejected') {
            var url = '@Html.ActionLink("_name_", "Edit", new { id = "_id_" })';
            url = url.replace(/_name_/, cellvalue);
            url = url.replace(/_id_/, rowObject[0]);
            return url;
        }
        return rowObject[2];
    }
</script>

