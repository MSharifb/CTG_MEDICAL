@model BEPZA_MEDICAL.Web.Areas.PRM.ViewModel.NotesAndDocumentInfoCommentsDetailViewModel
@*@using BEPZA_MEDICAL.Web.Helpers*@
@{
    Layout = null;
}

<table id="CommnetGrid" class="contenttable fixedcontenttable custom-grid">
    <thead>
        <tr>
            <th>
                Comments
            </th>
            <th>
                Comment By
            </th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.NotesAndDocumentInfoCommentsDetailList.Count; i++)
        {
            var item2 = Model.NotesAndDocumentInfoCommentsDetailList.ToList()[i];
            <tr>
                <td style="display: none;">
                    @Html.HiddenFor(m => m.NotesAndDocumentInfoCommentsDetailList[i].Id)
                </td>
                <td style="display: none;">
                    @Html.HiddenFor(m => m.NotesAndDocumentInfoCommentsDetailList[i].NotesAndDocumentInfoAttachmentDetailId)
                </td>
                <td style="display: none;">
                    @Html.HiddenFor(m => m.NotesAndDocumentInfoCommentsDetailList[i].Comments)
                </td>
                <td style="display: none;">
                    @Html.HiddenFor(m => m.NotesAndDocumentInfoCommentsDetailList[i].CommentByEmployeeId)
                </td>

                <td style="width:65%">
                    <label>@item2.Comments</label>
                </td>
                <td style="width:30%">
                    <label>  @item2.Employee</label>
                </td>

            </tr>
        }
    </tbody>

</table>
