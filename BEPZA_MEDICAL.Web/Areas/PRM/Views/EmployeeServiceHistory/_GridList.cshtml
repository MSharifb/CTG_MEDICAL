<script type="text/javascript">
    $(document).ready(function () {

        $('#jqGrid').jqGrid({
            url: '@Url.Action("GetList")',
            datatype: 'json',
            mtype: 'POST',
            colNames: ['ID', 'EmployeeId', 'Employee Id', 'Name', 'Designation', 'Type', 'OrderNo', 'OrderDate', 'Delete'],
            colModel: [
                            { name: 'Id', index: 'Id', align: 'left', search: false, hidden: true, edittype: 'text' },
                            { name: 'EmployeeId', index: 'EmployeeId', align: 'left', search: false, hidden: true, width: '280px', edittype: 'text' },
                            { name: 'EmpId', index: 'EmpId', align: 'center', search: true, width: '140px', edittype: 'text', formatter: viewformatEdiorLink, },
                            { name: 'EmployeeName', index: 'EmployeeName', align: 'left', search: true, edittype: 'text' },
                            { name: 'Designation', index: 'Designation', align: 'left', search: false, edittype: 'select' },
                            { name: 'Type', index: 'Type', align: 'left', search: true, edittype: 'select', surl: '@Url.Action("GetTypeView")' },
                            { name: 'OrderNo', index: 'OrderNo', align: 'left', search: false, edittype: 'select' },
                            { name: 'OrderDate', index: 'OrderDate', align: 'center', search: false, edittype: 'text' },
                            { name: 'Delete', index: 'Delete', align: 'right', search: false, hidden: IsDeleteAssigned, sortable: false, width: '90px', edittype: 'image', formatter: deleteformateadorLink }
            ],
            autowidth: true,
            caption: "Employee Service History",
            rowList: [20, 30, 40, 50, 100],
            pager: $('#jqGridPager'),
            rowNum: 20,
            sortname: 'EmployeeID',
            sortorder: 'asc',
            viewrecords: true,
            height: '100%',
            width: '50%'
        });
        // Pager Function
        $("#jqSearch").jqGrid('filterGrid', '#jqGrid', { gridModel: true, gridNames: true, formtype: 'horizontal', autosearch: false, enableSearch: true, enableClear: true });
        });

    function deleteformateadorLink(cellvalue, options, rowObject) {
        var url = '@Html.ActionLink(" ", "Delete", new { id = "_id_" }, new { @class = "deleteItem" })';
        url = url.replace(/_id_/, rowObject[0]);
        return url;
    }

    function viewformatEdiorLink(cellvalue, options, rowObject) {
        setDatePicker();
        var url = '@Html.ActionLink("_name_", "Edit", new { id = "_id_" })';
        url = url.replace(/_name_/, cellvalue);
        url = url.replace(/_id_/, rowObject[0]);
        return url;
    }
</script>
