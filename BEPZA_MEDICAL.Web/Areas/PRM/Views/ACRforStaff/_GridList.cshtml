@model BEPZA_MEDICAL.Web.Areas.PRM.ViewModel.ACRforStaff.ACRforStaffViewModel

<script type="text/javascript">
    $(document).ready(function () {

        $('#jqGrid').jqGrid({
            url: '@Url.Action("GetList")',
            datatype: 'json',
            mtype: 'POST',
            colNames: ['Name', 'Id', 'Employee ID', 'Designation', 'Designation', 'Department', 'Department'],
            colModel: [
                            { name: 'Name', index: 'Name', align: 'left', search: true, edittype: 'text', width: '200px', formatter: viewformatEdiorLink },
                            { name: 'Id', index: 'Id', align: 'left', search: false, hidden: true, edittype: 'text' },
                            { name: 'EmpId', index: 'EmpId', align: 'center', search: true, edittype: 'text', width: '80px' },
                            { name: 'DesignationId', index: 'DesignationId', align: 'left', hidden: true, search: true, edittype: 'select', surl: '@Url.Action("GetDesignation")' },
                            { name: 'Designation', index: 'Designation', align: 'left', search: false, edittype: 'select',  },
                            { name: 'DepartmentId', index: 'DepartmentId', align: 'left', hidden: true, search: true, edittype: 'select', surl: '@Url.Action("GetDivision")' },
                            { name: 'Department', index: 'Department', align: 'left', search: false, edittype: 'select' },
            ],
            autowidth: true,
            caption: "ACR for Staff Information",
            rowList: [20, 30, 40, 50, 100],
            pager: $('#jqGridPager'),
            rowNum: 20,
            viewrecords: true,
            height: '100%',
            width: '50%'
        });
        $("#jqSearch").jqGrid('filterGrid', '#jqGrid', { gridModel: true, gridNames: true, formtype: 'horizontal', autosearch: false, enableSearch: true, enableClear: true });

    });
    function deleteformateadorLink(cellvalue, options, rowObject) {
        var url = '@Html.ActionLink(" ", "Delete", new { id = "_id_" }, new { @class = "deleteItem" })';
        url = url.replace(/_id_/, rowObject[0]);
        return url;
    }
    function viewformatEdiorLink(cellvalue, options, rowObject) {

        var url = '@Html.ActionLink("_name_", Model.ActionName, new { id = "_id_" })';
        url = url.replace(/_name_/, cellvalue);
        url = url.replace(/_id_/, rowObject[1]);
        return url;
    }
</script>
