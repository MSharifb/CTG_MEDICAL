@model BOM_MPA.Web.Areas.PRM.ViewModel.SalaryHeadViewModel
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/PRM/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("Edit", "SalaryHead", FormMethod.Post, new { id = "frm" }))
{
   
    <fieldset>
    <div class="message">
           
            @Html.ValidationSummary(false, BOM_MPA.Web.Utility.Common.ValidationSummaryHead)
        </div>
        @Html.HiddenFor(model => model.Id)
        @Html.Partial("_CreateOrEdit", Model)
        
        <div class="button-center buttonSubmit" style="margin-top:10px;">
            
            @if ((new BOM_MPA.Web.Utility.AppConstant()).IsEditAssigned)
            {
                <input type="submit" value="Update" style="width: auto; overflow: visible; padding-left: .25em;
                    padding-right: .25em;" />
            }
            <input type="button" value="Clear" id="btnClear" name="btnClear" />
        </div>
    </fieldset>
}
<div class="button-crude button-left">
    <span></span>
    @Html.ActionLink("Back to List", "Index")
</div>
