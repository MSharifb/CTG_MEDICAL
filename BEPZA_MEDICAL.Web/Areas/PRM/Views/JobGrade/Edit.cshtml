@model BEPZA_MEDICAL.Web.Areas.PRM.ViewModel.SalaryScaleViewModel
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/PRM/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("Edit", "JobGrade", FormMethod.Post, new { id = "frmJobGrade" }))
{
    <fieldset>
        <div class="GroupBox" id="message">
            @Html.ValidationSummary(false, BEPZA_MEDICAL.Web.Utility.Common.ValidationSummaryHead)
            @if (!string.IsNullOrEmpty(Model.Message))
            {
                <div class="@Model.errClass">
                    @Model.Message
                </div>
            }
        </div>
        @Html.Partial("_CreateOrEdit", Model)
        <br />
        <div class="button-center buttonSubmit" style="margin-top: 10px;">
            @if ((new BEPZA_MEDICAL.Web.Utility.AppConstant()).IsEditAssigned)
            {
                <input type="submit" value="Update" style="width: auto; overflow: visible; padding-left: .25em;
                    padding-right: .25em;" />

            }
            @*<input type="button" value="Clear" id="btnClear" name="btnClear" />*@
        </div>
    </fieldset>

}
<div class="button-crude button-left" style="padding-left: 5px;">
    @Html.ActionLink("Back to List", "Index")
</div>
