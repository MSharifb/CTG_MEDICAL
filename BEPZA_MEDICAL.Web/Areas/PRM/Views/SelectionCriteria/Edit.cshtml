@model BEPZA_MEDICAL.Web.Areas.PRM.ViewModel.SelectionCriteriaViewModel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/PRM/Views/Shared/_Layout.cshtml";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm("Edit", "SelectionCriteria", FormMethod.Post, new { id = "frm", @encType = "multipart/form-data" }))
{
    <div class="GroupBox" id="message">
        @Html.ValidationSummary(false, BEPZA_MEDICAL.Web.Utility.Common.ValidationSummaryHead)
        @if (!string.IsNullOrEmpty(Model.ErrMsg))
        {
            <div style="color:Red" id="ErrMsg" class="@Model.ErrMsg">
                @Model.ErrMsg
            </div>
        }
    </div>
    <fieldset>
        @Html.Partial("_CreateOrEdit", Model)
        <div class="button-crude">
            @if ((new BEPZA_MEDICAL.Web.Utility.AppConstant()).IsEditAssigned)
            {
                <input type="submit" value="Update" id="btnSave" name="btnSubmit" style="margin-right: 8px;" />
            }
            @*<input type="button" value="Clear" id="btnClear" name="btnClear" />*@
        </div>
    </fieldset>
}
<div class="button-crude button-left">
    @Html.ActionLink("Back to List", "Index")
</div>
<script type="text/javascript">

    $(document).ready(function () {

        if ('@Model.ErrMsg' != "") {

            if ('@Model.IsError' == 1) {
                $('#message').html("<b style='color:Green'>" + '@Model.ErrMsg' + "</b>");
            }
            else {
                $('#message').html("<b style='color:Red'>" + '@Model.ErrMsg' + "</b>");
            }
        }
    });

</script>

