<script type="text/javascript">

    $(document).ready(function () {
        $('#jqGrid').jqGrid({
            url: '@Url.Action("GetList")',
            datatype: 'json',
            mtype: 'POST',
            colNames: ['Name', 'ID', 'Employee ID', 'Status Designation', 'Department', 'Joining Place', 'Grade', 'Joining Date', 'Confirm Date', 'Employment Type', 'Staff Category', 'Employee Status', 'OrganogramLevelId'],
            colModel: [
