@model BEPZA_MEDICAL.Web.Areas.PRM.ViewModel.StatusDesignationInfoViewModel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/PRM/Views/Shared/_Layout.cshtml";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm("Edit", "StatusDesignationInfo", FormMethod.Post, new { id = "frm"}))
{
    <div class="GroupBox" id="message">
        @Html.ValidationSummary(false, BEPZA_MEDICAL.Web.Utility.Common.ValidationSummaryHead)
        @if (!string.IsNullOrEmpty(Model.ErrMsg))
        {
            <div  class="@Model.errClass">
                @Model.ErrMsg
            </div>
        }
    </div>
    <fieldset>
        @Html.Partial("_CreateOrEdit", Model)
        <div class="button-crude">
            @if ((new BEPZA_MEDICAL.Web.Utility.AppConstant()).IsEditAssigned)
            {
                <input type="submit" value="Update" id="btnSave" name="btnSubmit" style="margin-right: 8px;" />
            }           
        </div>
    </fieldset>
}
<div class="button-crude button-left">
    @Html.ActionLink("Back to List", "Index")
</div>
