
<script src="@Url.Content("~/Scripts/jquery.jqGrid.addons-4.1.2.js")" type="text/javascript"></script>

<script type="text/javascript">

    function ResetForm() {
        $("#CountryId").val("");
        $("#DivisionName").val("");
        $("#Id").val("0");
        $('#btnUpdate').hide();
        $(".validation-summary-errors ").empty();
    }
    function OnSubmitSuccess(obj) {
        if (obj.Success > 0) {
            $('#message').html("<b style='color:Green'>" + obj.Message + "</b>");
            jQuery("#jqGrid").trigger("reloadGrid");
            ResetForm();
            $('#btnSave').show();
        }
        else {
            $("message").html("<b>" + obj.Message + "</b>").css("color", "red");
        }
    }

    function OnSubmitFailure() {
        alert('Form Submit Error!');
    }

    $(function () {

        $("#btnClear").click(
         function () {
             ResetForm();
             $('#btnSave').show();
             $('#message').empty();
         });

        $("a.editItem").live("click", function () {
            editLinkObj = $(this);
            $.get(editLinkObj[0].href, function (obj) {
                $("#Id").val(obj.Id);
                $("#CountryId").val(obj.CountryId);
                $("#DivisionName").val(obj.DivisionName);
            });
            $('#btnSave').hide();
            $('#btnUpdate').show();
            return false; // prevents the default behaviour
        });
        $("a.deleteItem").live("click", function () {
            deleteLinkObj = $(this);  //for future use
            $('#delete-dialog').dialog('open');
            return false; // prevents the default behaviour
        });
    });

    $(document).ready(function () {
        $('#jqGrid').jqGrid({
            url: '@Url.Action("GetList")',
            datatype: 'json',
            mtype: 'POST',
            colNames: ['ID', 'Division', 'Country', 'Edit', 'Delete'],
            colModel: [
                            { name: 'ID', index: 'ID', align: 'left', search: false, hidden: true, edittype: 'text' },
                            { name: 'DivisionName', index: 'DivisionName', align: 'left', search: false, edittype: 'text' },
                            { name: 'Country', index: 'Country', align: 'left', search: false, edittype: 'text' },
                            { name: 'Edit', index: 'Edit', align: 'center', width: '50px', hidden: IsDeleteAssigned, edittype: 'image', formatter: ViewformateadorLink },

                            { name: 'Delete', index: 'Delete', align: 'center', search: false, hidden: IsDeleteAssigned, sortable: false, width: '50px', edittype: 'image', formatter: deleteformateadorLink }
            ],
            autowidth: true,
            caption: "Country Division List",
            rowList: [20, 30, 40, 50, 100],
            pager: $('#jqGridPager'),
            rowNum: 20,
            sortname: 'DivisionName',
            sortorder: 'asc',
            viewrecords: true,
            height: '100%',
            width: '50%'
        });
        // Pager Function
        $("#jqSearch").jqGrid('filterGrid', '#jqGrid', { gridModel: true, gridNames: true, formtype: 'horizontal', autosearch: false, enableSearch: true, enableClear: true });

    });
    function deleteformateadorLink(cellvalue, options, rowObject) {
        var url = '@Html.ActionLink(" ", "Delete", new { id = "_id_" }, new { @class = "deleteItem" })';
        url = url.replace(/_id_/, rowObject[0]);
        return url;
    }

    function ViewformateadorLink(cellvalue, options, rowObject) {
        var url = '@Ajax.ActionLink(" ", "Edit", new { id = "_ID_" }, new AjaxOptions { }, new { @class = "editItem", @style = "text-decoration: none;" })';
        url = url.replace(/_CellValue_/, cellvalue)
        url = url.replace(/_ID_/, rowObject[0])
        return url;
    }

</script>
