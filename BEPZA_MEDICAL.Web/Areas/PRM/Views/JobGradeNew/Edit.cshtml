@model BOM_MPA.Web.Areas.PRM.ViewModel.SalaryScaleViewModel
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/PRM/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Edit", "JobGradeNew", FormMethod.Post, new { id = "frmJobGrade" }))
{
    <div class="GroupBox" style="max-height: 15px" id="message">
        @Html.ValidationSummary(false, BOM_MPA.Web.Utility.Common.ValidationSummaryHead)
    </div>
    <fieldset>
        @Html.Hidden("Id", Model.Id)
        @Html.Hidden("IdT", Model.Id)
        @Html.Partial("_CreateOrEdit", Model)
        <br />
        <div class="button-center buttonSubmit" style="margin-top: 10px;">
            @if ((new BOM_MPA.Web.Utility.AppConstant()).IsEditAssigned)
            {
                <input type="submit" value="Update" style="width: auto; overflow: visible; padding-left: .25em; padding-right: .25em;" />
            }
            <input type="button" value="Clear" id="btnClear" name="btnClear" />
        </div>
    </fieldset>
}

<div class="button-crude button-left" style="padding-left: 5px;">
    @Html.ActionLink("Back to List", "Index")
</div>
