</script>

<script type="text/javascript">

    $(document).ready(function () {
        $('#jqGridJobGrade').jqGrid({
            url: '@Url.Action("GetListJobGrade", new { Id = Model.Id })',
            datatype: 'json',
            mtype: 'POST',
            colNames: ['ID', 'Grade', 'Basic', 'Pay Scale', 'Delete'],
            colModel: [
                            { name: 'ID', index: 'ID', align: 'left', search: false, hidden: true, edittype: 'text' },
                            { name: 'GradeName', index: 'GradeName', align: 'left', search: true, edittype: 'text', formatter: viewformatEdiorLink },
                            { name: 'InitialBasic', index: 'InitialBasic', width: '100px', align: 'center', search: true, edittype: 'text' },
                            { name: 'PayScale', index: 'PayScale', width: '80px', align: 'center', search: true, edittype: 'text' },
                            { name: 'Delete', index: 'Delete', align: 'right', search: false, hidden: IsDeleteAssigned, sortable: false, width: '50px', edittype: 'image', formatter: deleteformateadorLink }
            ],
            autowidth: true,
            caption: "Salary Scale List",
            rowList: [20, 30, 40, 50, 100],
            pager: $('#jqGridJobGradePager'),
            rowNum: 20,
            sortname: 'ID',
            sortorder: 'asc',
            viewrecords: true,
            height: '100%',
            width: '50%'
        });
        // Pager Function
        $("#jqSearch").jqGrid('filterGrid', '#jqGrid', { gridModel: true, gridNames: true, formtype: 'horizontal', autosearch: false, enableSearch: true, enableClear: true });
    });

    function deleteformateadorLink(cellvalue, options, rowObject) {
        var url = '@Html.ActionLink(" ", "Delete", new { id = "_id_" }, new { @class = "deleteItem" })';
        url = url.replace(/_id_/, rowObject[0]);
        return url;
    }

    function viewformatEdiorLink(cellvalue, options, rowObject) {
        var url = '@Html.ActionLink("_name_", "EditJobGrade", new { id = "_id_" })';
        url = url.replace(/_name_/, cellvalue);
        url = url.replace(/_id_/, rowObject[0]);
        return url;
    }
</script>
