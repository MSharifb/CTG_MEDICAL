

<style>
   .ui-datepicker-trigger { z-index: 1000; }
</style>

<script type="text/javascript">

    $(document).ready(function () {
        $('#jqGrid').jqGrid({
            url: '@Url.Action("GetList")',
            datatype: 'json',
            mtype: 'POST',
            colNames: ['ID', 'Effective Date', 'Remarks'],
            colModel: [
                            { name: 'ID', index: 'ID', align: 'left', search: false, hidden: true, edittype: 'text' },
                            { name: 'EffectiveDate', index: 'EffectiveDate', width: '30px;', hidden: false, align: 'center', search: true, edittype: 'text', formatter: viewformatEdiorLink },
                            { name: 'Remarks', index: 'Remarks', hidden: false, align: 'left', search: false, edittype: 'text',sortable:false }
                          ],
            autowidth: true,
            caption: "Human Resource Rate List",
            rowList: [20, 30, 40, 50, 100],
            pager: $('#jqGridPager'),
            rowNum: 20,
            sortname: 'ID',
            sortorder: 'asc',
            viewrecords: true,
            height: '100%',
            width: '50%'
        });
        // Pager Function
        $("#jqSearch").jqGrid('filterGrid', '#jqGrid', { gridModel: true, gridNames: true, formtype: 'horizontal', autosearch: false, enableSearch: true, enableClear: true });

    });
   
    function viewformatEdiorLink(cellvalue, options, rowObject) {
        setDatePicker();
        var url = '@Html.ActionLink("_name_", "Edit", new { id = "_id_" })';
        url = url.replace(/_name_/, cellvalue);
        url = url.replace(/_id_/, rowObject[0]);
        return url;
    }
</script>
