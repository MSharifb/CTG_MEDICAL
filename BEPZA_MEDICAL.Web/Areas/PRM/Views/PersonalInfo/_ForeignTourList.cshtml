@model BEPZA_MEDICAL.Web.Areas.PRM.ViewModel.PersonalInfo.ForeignTourInfoViewModel

<script type="text/javascript">

    $(document).ready(function () {
        $('#jqGrid').jqGrid({
            url: '@Url.Action("GetForeignTourList", null, new { Id = Model.EmployeeId })',
            datatype: 'json',
            mtype: 'POST',
            colNames: ['Id', 'Title of the Tour', 'Visiting Country', 'Financed By', 'From Date', 'To Date'],
            colModel: [
                        { name: 'Id', index: 'ID', align: 'left', search: false, edittype: 'text', hidden: true },
                        { name: 'TitleOfTheTour', index: 'TitleOfTheTour', align: 'left', width: '170px', edittype: 'text', formatter: viewformatEdiorLink },
                        { name: 'Name', index: 'Name', align: 'left' },
                        { name: 'Financed', index: 'Financed', align: 'left' },
                        { name: 'VisitDateFrom', index: 'VisitDateFrom', align: 'center', width: '100px' },
                        { name: 'VisitDateTo', index: 'VisitDateTo', align: 'center', width: '100px' }
            ],
            autowidth: true,
            caption: "Foreign Tour Information",
            rowList: [10, 20, 30, 40, 50, 100],
            pager: $('#jqGridPager'),
            rowNum: 10,
            sortname: 'YearOfPassing',
            sortorder: 'asc',
            viewrecords: true,
            height: '100%',
            width: '50%'
        });

        $("#jqSearch").jqGrid('filterGrid', '#jqGrid', { gridModel: true, gridNames: true, formtype: 'horizontal', autosearch: false, enableSearch: true, enableClear: true });

    });
    function deleteformateadorLink(cellvalue, options, rowObject) {
        var url = '@Html.ActionLink(" ", "Delete", new { id = "_id_" }, new { @class = "deleteItem" })';
        url = url.replace(/_id_/, rowObject[0]);
        return url;
    }
    function viewformatEdiorLink(cellvalue, options, rowObject) {

        var url = '@Html.ActionLink("_name_", "ForeignTourInfoIndex", new { id = "_id_" })';
        url = url.replace(/_name_/, cellvalue);
        url = url.replace(/_id_/, rowObject[0]);
        return url;
    }
</script>
