@model BEPZA_MEDICAL.Web.Areas.PRM.ViewModel.PersonalInfo.LifeInsuranceViewModel

<script type="text/javascript">

    $(document).ready(function () {
        $('#jqGrid').jqGrid({
            url: '@Url.Action("GetLifeInsuranceList", null, new { Id = Model.EmployeeId })',
            datatype: 'json',
            mtype: 'POST',
            colNames: ['Id', 'Date of Death'],
            colModel: [
                        { name: 'Id', index: 'ID', align: 'left', search: false, edittype: 'text', hidden: true },
                        { name: 'DateOfDeath', index: 'DateOfDeath', align: 'center', width: '170px', edittype: 'text', formatter: viewformatEdiorLink },
            ],
            autowidth: true,
            caption: "Life Insurance Information",
            rowList: [10, 20, 30, 40, 50, 100],
            pager: $('#jqGridPager'),
            rowNum: 10,
            sortname: 'YearOfPassing',
            sortorder: 'asc',
            viewrecords: true,
            height: '100%',
            width: '50%'
        });

        $("#jqSearch").jqGrid('filterGrid', '#jqGrid', { gridModel: true, gridNames: true, formtype: 'horizontal', autosearch: false, enableSearch: true, enableClear: true });

    });
    function deleteformateadorLink(cellvalue, options, rowObject) {
        var url = '@Html.ActionLink(" ", "Delete", new { id = "_id_" }, new { @class = "deleteItem" })';
        url = url.replace(/_id_/, rowObject[0]);
        return url;
    }
    function viewformatEdiorLink(cellvalue, options, rowObject) {

        var url = '@Html.ActionLink("_name_", "LifeInsuranceIndex", new { id = "_id_" })';
        url = url.replace(/_name_/, cellvalue);
        url = url.replace(/_id_/, rowObject[0]);
        return url;
    }
</script>
