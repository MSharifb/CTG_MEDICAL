@model BEPZA_MEDICAL.Web.Areas.PRM.ViewModel.ProfessionalTrainingInfoViewModel
<script type="text/javascript">

    $(document).ready(function () {
        $('#jqGrid').jqGrid({
            url: '@Url.Action("GetProfessionalTrainingList", null, new { Id = Model.EmployeeId })',
            datatype: 'json',
            mtype: 'POST',
            colNames: ['Id', 'Course/Training Title', 'Institution', 'Training Type', 'Country', 'From', 'To', 'Duration'],
            colModel: [
                        { name: 'ID', index: 'ID', align: 'left', search: false, edittype: 'text', hidden: true },
                        { name: 'TrainingTitle', index: 'TrainingTitle', align: 'left', edittype: 'text', formatter: viewformatEdiorLink },
                        { name: 'OrganizedBy', index: 'OrganizedBy', align: 'left' },
                        { name: 'TrainingType', index: 'TrainingType', align: 'left', edittype: 'text' },
                        { name: 'Country', index: 'Country', align: 'left' },
                        { name: 'From', index: 'FromDate', align: 'center' },
                        { name: 'To', index: 'ToDate', align: 'center' },
                        { name: 'Duration', index: 'Duration', align: 'center' }
                      ],
            autowidth: true,
            caption: "Training Information List",
            rowList: [10, 20, 30, 40, 50, 100],
            pager: $('#jqGridPager'),
            rowNum: 10,
            sortname: 'ID',
            sortorder: 'asc',
            viewrecords: true,
            height: '100%',
            width: '50%'
        });

        $("#jqSearch").jqGrid('filterGrid', '#jqGrid', { gridModel: true, gridNames: true, formtype: 'horizontal', autosearch: false, enableSearch: true, enableClear: true });

    });
    function deleteformateadorLink(cellvalue, options, rowObject) {
        var url = '@Html.ActionLink(" ", "Delete", new { id = "_id_" }, new { @class = "deleteItem" })';
        url = url.replace(/_id_/, rowObject[0]);
        return url;
    }
    function viewformatEdiorLink(cellvalue, options, rowObject) {

        var url = '@Html.ActionLink("_name_", "ProfessionalTrainingInfoIndex", new { id = "_id_" })';
        url = url.replace(/_name_/, cellvalue);
        url = url.replace(/_id_/, rowObject[0]);
        return url;
    }
</script>
