@model BEPZA_MEDICAL.Web.Areas.PRM.ViewModel.EmployeeWealthStatementViewModel

@using (Html.BeginForm("CreateOrEditWealthStatementInfo", "PersonalInfo"))
{
    <fieldset>
        <div class="message">
            @if (!string.IsNullOrEmpty(Model.Message))
            {
                <div class="@Model.errClass">
                    @Model.Message
                </div>
            }
            @Html.ValidationSummary(false, BEPZA_MEDICAL.Web.Utility.Common.ValidationSummaryHead)
        </div>
        @Html.HiddenFor(model => model.EmployeeId)
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.strMode)
        @Html.Partial("_EmpTopInfo", Model.EmpTop)
        <div class="GroupBox">
            <div class="row">
                <span class="label">
                    @Html.LabelFor(model => model.AssetTypeId)<label class="required-field">
                        *
                    </label>
                </span><span class="field">
                    @Html.DropDownListFor(model => model.AssetTypeId, Model.AssetTypeList, @String.Format("{0}", Content.DDLOptionalLabel()))

                </span>
                <span class="label-right">
                    @Html.LabelFor(model => model.AssetGainDate)<label class="required-field">
                        *
                    </label>
                </span><span class="field">
                    @Html.EditorFor(model => model.AssetGainDate)
                </span>
            </div>
            <div class="row">
                <span class="label">
                    @Html.LabelFor(model => model.AssetName)<label class="required-field">
                        *
                    </label>
                </span><span class="field">
                    @Html.TextBoxFor(model => model.AssetName)
                </span>
                <span class="label-right">
                    @Html.LabelFor(model => model.AssetGainer)<label class="required-field">
                        *
                    </label>
                </span><span class="field">

                    @Html.TextBoxFor(model => model.AssetGainer)
                </span>
            </div>
            <div class="row">
                <span class="label">
                    @Html.LabelFor(model => model.AssetDescription)
                </span><span class="field">
                    @Html.EditorFor(model => model.AssetDescription)
                </span>
                <span class="label-right">
                    @Html.LabelFor(model => model.AssetLocation)
                </span><span class="field">
                    @Html.EditorFor(model => model.AssetLocation)
                </span>
                <div class="clear">
                </div>
            </div>
            <div class="row">
                <span class="label">
                    @Html.LabelFor(model => model.AssetQuantity)
                </span>
                <span class="field">
                    @Html.TextBoxFor(model => model.AssetQuantity)
                </span>
                <span class="label-right">
                    @Html.LabelFor(model => model.AssentValue)
                </span><span class="field">
                    @Html.EditorFor(model => model.AssentValue)
                </span>
                <div class="clear">
                </div>
            </div>
            <div class="row">
                <span class="label">
                    @Html.LabelFor(model => model.AssetPurchase)
                </span>
                <span class="field">
                    @Html.EditorFor(model => model.AssetPurchase)
                </span>
                <span class="label-right">
                    @Html.LabelFor(model => model.Remarks)
                </span><span class="field">
                    @Html.EditorFor(model => model.Remarks)
                </span>
            </div>
            <div class="clear">
            </div>
        </div>

        <div class="button-crude">
            @if ((new BEPZA_MEDICAL.Web.Utility.AppConstant()).IsEditAssigned || (new BEPZA_MEDICAL.Web.Utility.AppConstant()).IsAddAssigned)
            {
                <input type="submit" value="@Model.ButtonText" />
            }
            @if (!(new BEPZA_MEDICAL.Web.Utility.AppConstant()).IsViewAssigned)
            {
                @Html.ActionLink("Clear", "WealthStatementInformationIndex/" + @Model.EmployeeId.ToString(), new { IsMenu = true })
            }
            @if (Model.DeleteEnable && (new BEPZA_MEDICAL.Web.Utility.AppConstant()).IsDeleteAssigned)
            {
                @Html.ActionLink("Delete", "DeleteWealthStatementInfo", new { id = Model.Id }, new { @class = "delete-confirm" })
            }
        </div>
        <div class="spacer">
        </div>
        <div class="spacer">
        </div>
        <table id="jqGrid" cellpadding="0" cellspacing="0"></table>
        <div id="jqGridPager" style="text-align: center;">
        </div>
        @Html.Partial("_EmpWealthStatementList", Model)
    </fieldset>
}
<div class="button-crude button-left">
    @Html.ActionLink("Back to List", "Index")
</div>
<script type="text/javascript">

    function DeleteConfirm() {

        return confirm('Pressing OK will delete this record. Do you want to continue?')
    }
</script>


