@model BEPZA_MEDICAL.Web.Areas.PRM.ViewModel.EmployeeWealthStatementViewModel
<script type="text/javascript">

    $(document).ready(function () {
        $('#jqGrid').jqGrid({
            url: '@Url.Action("GetWealthStatementList", null, new { Id = Model.EmployeeId })',
            datatype: 'json',
            mtype: 'POST',
            colNames: ['Id', 'Asset Type', 'Name of the Asset', 'Asset Quantity', 'Asset Gained By', 'Date of Asset Gain'],
            colModel: [
                        { name: 'ID', index: 'ID', align: 'left', search: false, edittype: 'text', hidden: true },
                        { index: 'AssetType', align: 'center', edittype: 'text', width: '80px' },
                        { index: 'AssetName', align: 'left', edittype: 'text',width: '80px', formatter: viewformatEdiorLink },
                      
                        { index: 'AssetQuantity', align: 'center', width: '60px' },
                        { index: 'AssetGainer', align: 'left', edittype: 'text', width: '120px' },
                        { index: 'AssetGainDate', align: 'center', edittype: 'text', width: '80px' },
            ],
            autowidth: true,
            caption: "Wealth Statement List",
            rowList: [10, 20, 30, 40, 50, 100],
            pager: $('#jqGridPager'),
            rowNum: 10,
            sortname: 'ID',
            sortorder: 'asc',
            viewrecords: true,
            height: '100%',
            width: '50%'
        });

        $("#jqSearch").jqGrid('filterGrid', '#jqGrid', { gridModel: true, gridNames: true, formtype: 'horizontal', autosearch: false, enableSearch: true, enableClear: true });

    });
    function deleteformateadorLink(cellvalue, options, rowObject) {
        var url = '@Html.ActionLink(" ", "Delete", new { id = "_id_" }, new { @class = "deleteItem" })';
        url = url.replace(/_id_/, rowObject[0]);
        return url;
    }
    function viewformatEdiorLink(cellvalue, options, rowObject) {

        var url = '@Html.ActionLink("_name_", "WealthStatementInformationIndex", new { id = "_id_" })';
        url = url.replace(/_name_/, cellvalue);
        url = url.replace(/_id_/, rowObject[0]);
        return url;
    }
</script>

