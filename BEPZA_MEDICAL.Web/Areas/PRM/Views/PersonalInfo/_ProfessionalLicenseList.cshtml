@model BEPZA_MEDICAL.Web.Areas.PRM.ViewModel.ProfessionalLicenseInfoViewModel
<script type="text/javascript">

    $(document).ready(function () {
        $('#jqGrid').jqGrid({
            url: '@Url.Action("GetProfessionalLicenseList", null, new { Id = Model.EmployeeId })',
            datatype: 'json',
            mtype: 'POST',
            autowidth: true,
            colNames: ['Id', 'License Type', 'License No.', 'Institute', 'Country', 'Permit Date', 'Expire Date'],
            colModel: [
                        { name: 'ID', index: 'ID', align: 'left', search: false, edittype: 'text', hidden: true },
                        { index: 'LicenseType', align: 'left', width: '170px', edittype: 'text', formatter: viewformatEdiorLink },
                        { index: 'LicenseNo', align: 'left', edittype: 'text' },
                        { index: 'Institute', index: 'Country', align: 'left' },
                        { index: 'Country', align: 'left' },
                        { index: 'PermitDate', align: 'center', width: '100px' },
                        { index: 'ExpireDate', align: 'center', width: '100px' }
                      ],
            caption: "Professional License List",
            rowList: [10, 20, 30, 40, 50, 100],
            pager: $('#jqGridPager'),
            rowNum: 10,
            sortname: 'ID',
            sortorder: 'asc',
            viewrecords: true,
            height: '100%',
            width: '100%'
        });

        $("#jqSearch").jqGrid('filterGrid', '#jqGrid', { gridModel: true, gridNames: true, formtype: 'horizontal', autosearch: false, enableSearch: true, enableClear: true });

    });
    function deleteformateadorLink(cellvalue, options, rowObject) {
        var url = '@Html.ActionLink(" ", "Delete", new { id = "_id_" }, new { @class = "deleteItem" })';
        url = url.replace(/_id_/, rowObject[0]);
        return url;
    }
    function viewformatEdiorLink(cellvalue, options, rowObject) {

        var url = '@Html.ActionLink("_name_", "ProfessionalLicenseInfoIndex", new { id = "_id_" })';
        url = url.replace(/_name_/, cellvalue);
        url = url.replace(/_id_/, rowObject[0]);
        return url;
    }
</script>
