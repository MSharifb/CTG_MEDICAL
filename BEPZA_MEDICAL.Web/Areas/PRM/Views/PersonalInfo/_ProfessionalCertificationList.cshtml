@model BEPZA_MEDICAL.Web.Areas.PRM.ViewModel.ProfessionalCertificationInfoViewModel
<script type="text/javascript">

    $(document).ready(function () {
        $('#jqGrid').jqGrid({
            url: '@Url.Action("GetProfessionalCertificationList", null, new { Id = Model.EmployeeId })',
            datatype: 'json',
            mtype: 'POST',
            autowidth: true,
            colNames: ['Id', 'Certification Catagory', 'Certification Title', 'Institute', 'Country', 'Year', 'Result'],
            colModel: [
                        { name: 'ID', index: 'ID', align: 'left', search: false, edittype: 'text', hidden: true },
                        { name: 'CertificationCatagory', index: 'CertificationCatagory', align: 'left', width: '170px', edittype: 'text', formatter: viewformatEdiorLink },
                        { name: 'CertificationTitle', index: 'CertificationTitle', align: 'left', edittype: 'text' },
                        { name: 'CertificationInstitute', index: 'CertificationInstitute', align: 'left' },
                        { name: 'Country', index: 'Country', align: 'left' },
                        { name: 'CertificationYear', index: 'CertificationYear', align: 'right', width: '100px' },
                        { name: 'Result', index: 'Result', align: 'left' }
                      ],            
            caption: "Professional Certification List",
            rowList: [10, 20, 30, 40, 50, 100],
            pager: $('#jqGridPager'),
            rowNum: 10,
            sortname: 'ID',
            sortorder: 'asc',
            viewrecords: true,
            height: '100%',
            width: '100%'
        });

        $("#jqSearch").jqGrid('filterGrid', '#jqGrid', { gridModel: true, gridNames: true, formtype: 'horizontal', autosearch: false, enableSearch: true, enableClear: true });

    });
    function deleteformateadorLink(cellvalue, options, rowObject) {
        var url = '@Html.ActionLink(" ", "Delete", new { id = "_id_" }, new { @class = "deleteItem" })';
        url = url.replace(/_id_/, rowObject[0]);
        return url;
    }
    function viewformatEdiorLink(cellvalue, options, rowObject) {

        var url = '@Html.ActionLink("_name_", "ProfessionalCertificationInfoIndex", new { id = "_id_" })';
        url = url.replace(/_name_/, cellvalue);
        url = url.replace(/_id_/, rowObject[0]);
        return url;
    }
</script>
