    function deleteformateadorLink(cellvalue, options, rowObject) {
        if (rowObject[10] == 'AdmitCard') {
            var url = '@Html.ActionLink(" ", "AdmitCardView", new { id = "_id_" }, new { @class = "editItem", @target = "_blank" })';
            url = url.replace(/_id_/, rowObject[0]);
            return url;
        }
        return "";
    }
    function viewformatEdiorLink(cellvalue, options, rowObject) {
        if (rowObject[09] == 'View') {
            var url = '@Html.ActionLink(" ", "Preview", new { id = "_id_" }, new { @class = "editItem", @style = "text-decoration: none;", @target="_blank"})';
            url = url.replace(/_id_/, rowObject[0]);
            return url;
            return url;
        }
        return rowObject[2];
