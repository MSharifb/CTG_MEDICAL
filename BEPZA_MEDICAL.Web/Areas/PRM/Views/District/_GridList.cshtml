<script type="text/javascript">

    function ResetForm() {
        $("#CountryId").val("");
        LoadDivision();
        $("#DistrictName").val("");
        $("#DivisionId").val("");
        $("#Id").val("0");
        $('#btnUpdate').hide();
        $(".validation-summary-errors ").empty();
    }

    function OnSubmitFailure() {
        alert('Form Submit Error!');
    }

    function LoadDivision() {
        var selectedCountry = $('#CountryId').val();
        var divisionSelect = $('#DivisionId');
        divisionSelect.empty();
        divisionSelect.append($('<option/>', {
            value: '',
            text: '@Content.DDLOptionalLabel()'
        }));
        if (selectedCountry != null && selectedCountry != '') {
            $.getJSON('@Url.Action("GetDivision")', { countryId: selectedCountry }, function (divisions) {
                $.each(divisions, function (index, division) {
                    divisionSelect.append($('<option/>', {
                        value: division.Id,
                        text: division.DivisionName
                    }));
                });
            });
        }
    }

    $(function () {

        $("#btnClear").click(
         function () {


             ResetForm();
             $('#btnSave').show();
             $('.field-validation-error')
                .removeClass('field-validation-error')
                .addClass('field-validation-valid');

             $('.input-validation-error')
                .removeClass('input-validation-error')
                .addClass('valid');
             $(".validation-summary-errors")
                .removeClass("validation-summary-errors")
                .addClass("validation-summary-valid");
         });

        $("a.editItem").live("click", function () {
            editLinkObj = $(this);
            $.get(editLinkObj[0].href, function (obj) {
                $("#Id").val(obj.Id);
                $("#CountryId").val(obj.CountryId);
                LoadDivision();
                setTimeout(function () { $("#DivisionId").val(obj.DivisionId); }, 100);
                $("#DistrictName").val(obj.DistrictName);
            });

            $('#btnSave').hide();
            $('#btnUpdate').show();

            return false; // prevents the default behaviour
        });
        $("a.deleteItem").live("click", function () {
            deleteLinkObj = $(this);  //for future use
            $('#delete-dialog').dialog('open');
            return false; // prevents the default behaviour
        });
    });


</script>
<script type="text/javascript">

    $(document).ready(function () {
        $('#jqGrid').jqGrid({
            url: '@Url.Action("GetList")',
            datatype: 'json',
            mtype: 'POST',
            colNames: ['ID', 'District', 'Division', 'Country', 'Edit', 'Delete'],
            colModel: [
