@model BEPZA_MEDICAL.Web.Areas.PRM.ViewModel.NoteOrderInfoViewModel
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/PRM/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("Edit", "NoteOrderInfo", FormMethod.Post, new { id = "frm" }))
{
    <fieldset>
        <div class="GroupBox" id="message">
            @Html.ValidationSummary(false, BEPZA_MEDICAL.Web.Utility.Common.ValidationSummaryHead)
            @if (!string.IsNullOrEmpty(Model.ErrMsg))
            {
                <div id="ErrMsg" class="@Model.errClass">
                    @Model.ErrMsg
                </div>
            }
        </div>
        @Html.Partial("_CreateOrEdit", Model)
        <div class="button-crude">
            @if ((new BEPZA_MEDICAL.Web.Utility.AppConstant()).IsAddAssigned)
            {
                <input type="submit" value="Update" id="btnSave" name="btnSubmit" style="margin-right: 8px;" />
                <input type="submit" value="Order" id="btnIsOrder" name="btnSubmit" style="margin-right: 8px;" />
            }           
        </div>
    </fieldset>
    <script>
        if ('@Model.IsOrder' == "True") {
            $('#btnSave').hide();
        }
    </script>

}
<div class="button-crude button-left">
    @Html.ActionLink("Back to List", "Index")
</div>


