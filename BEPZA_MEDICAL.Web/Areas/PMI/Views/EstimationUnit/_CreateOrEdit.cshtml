@model BEPZA_MEDICAL.Web.Areas.PMI.ViewModel.Estimation.EstimationUnitViewModel

@*@{
  Layout = null;
}*@

<div class="GroupBox">
    <div class="row">
        <span class="label">
            @Html.HiddenFor(model => model.Id)
            @Html.LabelFor(model => model.Name)
            @Html.HiddenFor(model=>model.ActionType)
            <label class="required-field">
                *
            </label>
        </span>
        <span class="field">
            @Html.TextBoxFor(model => model.Name)
        </span>
        <span class="label-right">
            @Html.LabelFor(model => model.Code)
            <label class="required-field">* </label>
        </span>
        <span class="field">
            @Html.TextBoxFor(model => model.Code)
        </span>
    </div>
    <div class="row">
        <span class="label">
            @Html.LabelFor(model => model.Description)
        </span>
        <span class="field">
            @Html.TextAreaFor(model => model.Description)
        </span>
        <span class="label-right">
            @Html.LabelFor(model => model.IsActive)
        </span>
        <span class="field">
            @Html.CheckBoxFor(model => model.IsActive)
        </span>
    </div>
</div>


<script type="text/javascript">

    $(document).ready(function () {
        buttonHide();
    });

    $(function() {
        var Url = window.location.href;
        $("#btnClear").live("click", function (event) {
            event.preventDefault();
            window.location.href = Url;
        });
    });

    function buttonHide() {
        if ('@Model.errClass' == "success" && '@Model.IsError' == "0") {
            $('input[name="btnSave"]').hide();
        }
    }

</script>
