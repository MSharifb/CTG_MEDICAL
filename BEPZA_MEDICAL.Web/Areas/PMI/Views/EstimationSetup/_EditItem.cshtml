@model BEPZA_MEDICAL.Web.Areas.PMI.ViewModel.Estimation.EstimationSetupViewModel
@using BEPZA_MEDICAL.Web.Helpers

@using (Html.BeginCollectionItem("EstimationSetupViewModelList"))
{
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.EstimationHeadId)
    <div class="form-group">
        @Html.LabelFor(model => model.ItemCode, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">@Html.TextBoxFor(model => model.ItemCode, new { @required = @"required" })</div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.ItemName, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">@Html.TextBoxFor(model => model.ItemName, new { @required = @"required" })</div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.UnitId, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">@Html.DropDownListFor(model => model.UnitId, Model.UnitList, @String.Format("{0}", Content.DDLOptionalLabel()), new { @class = @"form-control", @required = @"required" })</div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.UnitPrice, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">@Html.TextBoxFor(model => model.UnitPrice, new { @required = @"required" })</div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.ItemDescription, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">@Html.TextAreaFor(model => model.ItemDescription, new { @style = @"width:100%" })</div>
    </div>
}
<script type="text/javascript">
    $(document).ready(function () {
        $("#UnitId").select2();
    });
</script>