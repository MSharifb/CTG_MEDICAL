@{
    ViewBag.Title = "Estimation Setup";
    Layout = "~/Areas/PMI/Views/Shared/_LayoutNew.cshtml";
}

@using (Ajax.BeginForm("Index", "EstimationSetup", new AjaxOptions { HttpMethod = "POST" }, new { id = "frm" }))
{
    <div class="message">
        @Html.ValidationSummary(false, BEPZA_MEDICAL.Web.Utility.Common.ValidationSummaryHead)
        @if (Model != null)
        {
            if (!string.IsNullOrEmpty(Model.ErrMsg))
            {
                <div class="@Model.errClass">
                    @Model.ErrMsg
                </div>
            }
        }

    </div>
    <fieldset>
        <div id="jqSearch">
        </div>
    </fieldset>
    <div class="button-crude" style="text-align:left; overflow:hidden;">
        @if ((new BEPZA_MEDICAL.Web.Utility.AppConstant()).IsAddAssigned)
        {
            <a href="@Url.Action("Create")" class="btn btn-sm btn-primary"> <i class="fa fa-plus-circle"></i> Add new</a>
            @*@Html.ActionLink("Add New", "Create")*@
        }
    </div>
    <div class="clear" style="height:10px">
    </div>
    <table id="jqGrid" cellpadding="0" cellspacing="0"></table>
    <div id="jqGridPager" style="text-align: center;">
    </div>
    <div id="divList">
        @Html.Partial("_GridList")
    </div>
}

<style type="text/css">
    .filtertable tbody tr td select, .filtertable tbody tr td input {
        width: 350px;
    }

    .select2-container--default .select2-selection--single {
        padding: 1px 1px;
    }
</style>
<script type="text/javascript">
    $(document).ready(function () {
        setTimeout(SetFilter, 1000);
    });

    function SetFilter() {
        $('.filtertable tbody tr td select').select2();
    }
</script>
