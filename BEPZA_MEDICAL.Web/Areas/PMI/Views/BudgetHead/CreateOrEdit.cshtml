<div>
    @using (Html.BeginForm(Model.ActionType, "BudgetHead", FormMethod.Post, new { id = "frm" }))
    {
        <div class="message">
            @if (!string.IsNullOrEmpty(Model.ErrMsg))
            {
                if (@Model.IsError == 1)
