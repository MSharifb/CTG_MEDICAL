<script type="text/javascript">

    $(document).ready(function () {
        $('#jqGrid').jqGrid({
            url: '@Url.Action("GetList")',
            datatype: 'json',
            mtype: 'POST',
            colNames: ['Id', 'Report Date', 'Report From Date', 'Report To Date', 'Delete'],
            colModel: [
                            { name: 'Id', index: 'Id', align: 'left', search: false, hidden: true, edittype: 'text' },
                            { name: 'ReportDate', index: 'ReportDate', align: 'left', search: false, hidden: false, edittype: 'text', formatter: viewformatEdiorLink },
                            { name: 'ReportFromDate', index: 'ReportFromDate', align: 'left', search: true, hidden: true, edittype: 'text', formatter: viewformatEdiorLink },
                            { name: 'ReportToDate', index: 'ReportToDate', align: 'left', search: true, hidden: true, edittype: 'text', formatter: viewformatEdiorLink },
                            { name: 'Delete', index: 'Delete', align: 'right', hidden: true, search: false, hidden: IsDeleteAssigned, sortable: false, width: '70px', edittype: 'image', formatter: deleteformateadorLink }
            ],
            autowidth: true,
            caption: "Progress Report",
            rowList: [20, 30, 40, 50, 100],
            pager: $('#jqGridPager'),
            rowNum: 20,
            viewrecords: true,
            height: '100%',
            width: '50%',
            loadComplete: function () {
                $("a.deleteItem").on('click', function (e) {
                    e.preventDefault();
                    deleteLinkObj = $(this);  //for future use
                    $('#delete-dialog').dialog('open');
                    return false; // prevents the default behaviour
                });
            }
        });
        // Pager Function
        $("#jqSearch").jqGrid('filterGrid', '#jqGrid', { gridModel: true, gridNames: true, formtype: 'horizontal', autosearch: false, enableSearch: true, enableClear: true });
    });

    function GetCurrentFinancialYear() {
        var url = '@Url.Action("GetCurrentFinancialYear", "Budget")';
        $.ajax({
            url: url,
            type: 'POST',
            cache: false,
            success: function (data) {
                console.log(data);
            }
        })
    }

    function deleteformateadorLink(cellvalue, options, rowObject) {
        var url = '@Html.ActionLink(" ", "Delete", new { id = "_Id_" }, new { @class = "deleteItem" })';
        url = url.replace(/_Id_/, rowObject[0]);

        return url;
    }

    function viewformatEdiorLink(cellvalue, options, rowObject) {
        var url = '@Html.ActionLink("_name_", "Edit", new { id = "_Id_" })';
        url = url.replace(/_name_/, cellvalue);
        url = url.replace(/_Id_/, rowObject[0]);
        $('#btnUpdate').css("display", "block");
        return url;
    }

    $(function () {
        $('#sg_ReportFromDate, #sg_ReportToDate').datepicker({ buttonImage: '@Url.Content("~/Content/Images/calendar-blue.gif")', dateFormat: 'dd-mm-yy', buttonImageOnly: true, showOn: "button", buttonText: 'Choose' })
        .css({ 'width': '100px' });
    })


</script>
