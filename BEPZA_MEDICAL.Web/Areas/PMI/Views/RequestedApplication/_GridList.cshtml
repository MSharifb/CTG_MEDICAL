
<script type="text/javascript">
    $(document).ready(function () {

        $('#jqGrid').jqGrid({
            url: '@Url.Action("GetList")',
            datatype: 'json',
            mtype: 'POST',
            colNames: ['ID', 'Unit', 'Application', 'Application', 'Date', 'Status', 'Status', 'View'],
            colModel: [
                  { name: 'Id', index: 'Id', align: 'left', search: false, hidden: true, edittype: 'text' },
                  { name: 'BudgetProjectAPPId', index: 'BudgetProjectAPPId', align: 'left', hidden: true, search: false, edittype: 'text' },
                  { name: 'ApprovalSectionId', index: 'ApprovalSectionId', align: 'left', search: true, hidden: true, edittype: 'select', surl: '@Url.Action("GetApplication")'},
                  { name: 'ApprovalSection', index: 'ApprovalSection', align: 'left', search: false, edittype: 'text' },
                  { name: 'CreateDate', index: 'CreateDate', align: 'left', search: false, edittype: 'text' },
                  { name: 'StatusId', index: 'StatusId', align: 'left', search: true, hidden: true, edittype: 'select', surl: '@Url.Action("GetStatus")'},
                  { name: 'Status', index: 'Status', align: 'left', search: false, edittype: 'select'},
                  { name: 'View', index: 'View', align: 'left', search: false, edittype: 'image', formatter: viewformatEdiorLink }
            ],
            autowidth: true,
            caption: "Requested Application",
            rowList: [20, 30, 40, 50, 100],
            pager: $('#jqGridPager'),
            rowNum: 20,
            viewrecords: true,
            height: '100%',
            width: '50%'
        });
        $("#jqSearch").jqGrid('filterGrid', '#jqGrid', { gridModel: true, gridNames: true, formtype: 'horizontal', autosearch: false, enableSearch: true, enableClear: true });

    });
    function deleteformateadorLink(cellvalue, options, rowObject) {
        var url = '@Html.ActionLink(" ", "Delete", new { id = "_id_" }, new { @class = "deleteItem" })';
        url = url.replace(/_id_/, rowObject[0]);
        return url;
    }
    function viewformatEdiorLink(cellvalue, options, rowObject) {

        var url = '@Html.ActionLink("_name_", "Edit", new { id = "_id_", type = "_type_" }, new { @class = "viewItem", @style = "text-decoration:none" })';
        url = url.replace(/_name_/, cellvalue);
        url = url.replace(/_id_/, rowObject[1]);
        url = url.replace(/_type_/, rowObject[3]);
        return url;
    }
</script>

