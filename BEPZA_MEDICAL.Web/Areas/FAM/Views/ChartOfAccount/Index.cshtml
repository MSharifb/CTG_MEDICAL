@using BEPZA_MEDICAL.Web.Areas.FAM.Models.ChartOfAccount
@model ChartOfAccountModel
@{
    ViewBag.Title = "Common Configuration";
    Layout = "~/Areas/FAM/Views/Shared/_Layout.cshtml";
}<script src="@Url.Content("~/Content/jstree_pre1.0_fix_1/jquery.jstree.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Content/jstree_pre1.0_fix_1/_lib/jquery.hotkeys.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Content/jstree_pre1.0_fix_1/_lib/jquery.cookie.js")" type="text/javascript"></script>
<link href="@Url.Content("~/Content/jstree_pre1.0_fix_1/themes/default/style.css")" rel="stylesheet" type="text/css" />
<div class="GroupBox">
    <div class="GroupBox" id="message">
        @Html.ValidationSummary(false, BEPZA_MEDICAL.Web.Utility.Common.ValidationSummaryHead)
    </div>
    
    <div class="GroupBox search-content">
        <div class="row">
            <span class="label">
                @Html.LabelFor(model => model.AccountHeadCode)
            </span>
            <span class="field">
                @Html.EditorFor(model => model.AccountHeadCode)                
            </span>
            <span class="label-right">
                @Html.LabelFor(model => model.AccountHeadName)
            </span>
            <span class="field-LargeWidth">
                @Html.EditorFor(model => model.AccountHeadName)                
            </span>
        </div>
        <div class="row">
            <div class="button-crude button-left">
                @Ajax.ActionLink("Add New", "createnew", new AjaxOptions { OnComplete = "OnCompleteCreate" })
                
            </div>            
            <div class="button-crude button-left" style="margin: 0 0 0 430px;">
                @*<a href="#" >Search</a>*@
                <input type="button" id="search" value="Search" />

            </div>
        </div>
    </div>
<div class="frm-content">
    <div class="GroupBox">
        @Html.Partial("_TreeView")
    </div>
    </div>
</div>

<script type="text/javascript">
    function OnCompleteCreate(content) {

        if (content.statusText == 'OK') {
            //   console.log(content);
            //var data = jQuery.parseJSON(content.response)
            $('.search-content').hide();
            $('.frm-content').html(content.responseText);
        }
    }
</script>
