@using BEPZA_MEDICAL.Web.Areas.FAM.Models.Configuration
@model ConfigurationModel
<script type="text/javascript">

    $(function () {

        //$("#selectable").selectable();

        var leftMenuType = $("#selectable li:nth(0)").text();
        var action = '@Url.Action("Create")' + '?type=' + leftMenuType;

        $("#frm").attr('action', action);
        jQuery("#jqGrid").trigger("reloadGrid");

        $('#btnSave').show();
        $('#btnUpdate').hide();
        document.getElementById('frm').reset();
        $('#message').empty();

        $("#selectable li:nth(0)").addClass('ui-selected');



        $("#selectable").selectable({

            selected: function (event, ui) {
                var leftMenuType = $('.ui-selected:first').text();
                var action = '@Url.Action("Create")' + '?type=' + leftMenuType;

                $("#frm").attr('action', action);

                jQuery("#jqGrid").trigger("reloadGrid");

                $('#btnSave').show();
                $('#btnUpdate').hide();
                document.getElementById('frm').reset();
                $('#message').empty();
            }
        });
    });

</script>
@* none repeat scroll 0 0 #D8D2FE*@
<div id="leftPanelList">
    <ul id="selectable" class="ui-selectable">
        @foreach (var item in Model.CommonConfigTypes)
        {
            <li class="ui-selectee" style="color: #3C78B5">@item.DisplayName</li>
        }
    </ul>
</div>
<style type="text/css">
    #feedback
    {
        font-size: 1 em;
    }
    #selectable .ui-selecting
    {
        background: #D8D2FE;
    }
    #selectable .ui-selected
    {
        background: #C6DEF6;
        color: white;
        font-weight: bold;
    }
    #selectable
    {
        list-style-type: none;
        margin: 0;
        padding: 0;
        width: 95%;
    }
    #selectable li
    {
        font-size: 13px;
        height: 24px;
        border: .5px solid #EEEEEE;
        width: 100%;
        cursor: pointer;
    }
</style>
