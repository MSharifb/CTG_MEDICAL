            colModel: [
            { name: 'Id', index: 'Id', align: 'left', search: false, hidden: true, edittype: 'text' },
            { name: 'FDRNumber', index: 'FDRNumber', align: 'left', width: '120px', search: false, edittype: 'text' },
            { name: 'FDRDate', index: 'FDRDate', align: 'center', width: '80px', search: false, edittype: 'text' },
            { name: 'FDRDateFrom', index: 'FDRDateFrom', align: 'center', search: true, hidden: true, edittype: 'text' },
            { name: 'FDRDateTo', index: 'FDRDateTo', align: 'center', search: true, hidden: true, edittype: 'text' },
            { name: 'MaturityDate', index: 'MaturityDate', align: 'center', width: '80px', search: false, edittype: 'text' },
            { name: 'ClosingDateFrom', index: 'ClosingDateFrom', align: 'center', search: true, hidden: true, edittype: 'text' },
            { name: 'ClosingDateTo', index: 'ClosingDateTo', align: 'center', search: true, hidden: true, edittype: 'text' },
            { name: 'ClosingAmount', index: 'ClosingAmount', align: 'right', width: '100px', search: false, edittype: 'text' },
            { name: 'InterestRate', index: 'InterestRate', align: 'center', width: '80px', search: false, edittype: 'text' },
            { name: 'InterestRateFrom', index: 'InterestRateFrom', align: 'center', search: true, hidden: true, edittype: 'text' },
            { name: 'InterestRateTo', index: 'InterestRateTo', align: 'center', search: true, hidden: true, edittype: 'text' },
            { name: 'BankInfoId', index: 'BankInfoId', align: 'left', width: '100px', search: true, hidden: true, edittype: 'select', surl: '@Url.Action("BankListView")' },
            { name: 'BankName', index: 'BankName', align: 'left', width: '100px', search: false, edittype: 'text' },
            { name: 'BankInfoBranchDetailId', index: 'BankInfoBranchDetailId', align: 'left', width: '100px', search: true, hidden: true, edittype: 'select', surl: '@Url.Action("BranchListView")' },
            { name: 'BranchName', index: 'BranchName', align: 'left', width: '100px', search: false, edittype: 'text' },
            { name: 'IsRenew', index: 'IsRenew', align: 'center', width: '50px', hidden: true, search: false, sortable: false, edittype: 'text' },
            { name: 'ProfitRecvId', index: 'ProfitRecvId', align: 'center', width: '50px', hidden: true, search: false, sortable: false, edittype: 'text' },
            { name: 'FDRNo', index: 'FDRNo', align: 'left', width: '120px', search: true, hidden: true, edittype: 'text' },
            { name: 'IsFDRSaved', index: 'IsFDRSaved', align: 'center', width: '100px', search: false, hidden: true, edittype: 'text'},
            { name: 'FDRSaved', index: 'FDRSaved', align: 'center', search: false, sortable: false, width: '80px', edittype: 'image', formatter: FDRSavedLink },
            { name: 'Voucher', index: 'Voucher', align: 'center', search: false, sortable: false,hidden:true, width: '80px', edittype: 'image', formatter: VoucherLink },
            { name: 'Edit', index: 'Edit', align: 'center', search: false, sortable: false, width: '50px', edittype: 'image', formatter: ViewformateadorLink },
            { name: 'Delete', index: 'Delete', align: 'Center', search: false, hidden: IsDeleteAssigned, sortable: false, width: '40px', edittype: 'image', formatter: deleteformateadorLink }
            ],
            autowidth: true,
            caption: "FDR Closing/Renew",
            rowList: [20, 30, 40, 50, 100],
            pager: $('#jqGridPager'),
            rowNum: 20,
            viewrecords: true,
            height: '100%',
            width: '50%',
            loadComplete: function () {
                $("a.deleteItem").on('click', function (e) {
                    e.preventDefault();
                    deleteLinkObj = $(this);  //for future use
                    $('#delete-dialog').dialog('open');
                    return false; // prevents the default behaviour
                });
            }
        });
        // Pager Function
        $("#jqSearch").jqGrid('filterGrid', '#jqGrid', { gridModel: true, gridNames: true, formtype: 'horizontal', autosearch: false, enableSearch: true, enableClear: true });
        $('#sg_FDRDateFrom,#sg_FDRDateTo,#sg_ClosingDateFrom,#sg_ClosingDateTo').datepicker({ buttonImage: '@Url.Content("~/Content/Images/calendar-blue.gif")', dateFormat: 'dd-mm-yy', changeMonth: true, changeYear: true, buttonImageOnly: true, showOn: "button", buttonText: 'Choose' });

    });


    function deleteformateadorLink(cellvalue, options, rowObject) {
        if (rowObject[18] == '1' || !rowObject[16]) {
            var url = '@Html.ActionLink(" ", "Delete", new { id = "_id_" }, new { @class = "deleteItem" })';
            url = url.replace(/_id_/, rowObject[0]);
            return url;
        }
        return "";
    }

    function ViewformateadorLink(cellvalue, options, rowObject) {
        if (rowObject[16] == 'True') {
            var url = '@Html.ActionLink(" ", "Edit", new { id = "_id_" }, new { @class = "editItem", @style = "text-decoration: none;" })';
            url = url.replace(/_name_/, cellvalue);
            url = url.replace(/_id_/, rowObject[0]);
            return url;
        }
        return "";
    }

    function VoucherLink(cellvalue, options, rowObject) {
        if (!rowObject[16]) {
            var url = '@Html.ActionLink(" ", "VoucherPosing", new { id = "_id_" }, new { @class = "fa fa-lg fa-tasks", @style = "text-decoration: none;" })';
            url = url.replace(/_name_/, cellvalue);
            url = url.replace(/_id_/, rowObject[0]);
            return url;
        }
        return "";
    }

    function FDRSavedLink(cellvalue, options, rowObject) {
        if (rowObject[18]=='1') {
            var url = '@Html.ActionLink(" ", "Renew", new { id = "_id_" }, new { @class = "editItem", @style = "text-decoration: none;" })';
            url = url.replace(/_name_/, cellvalue);
            url = url.replace(/_id_/, rowObject[0]);
            return url;
        }
        return "";
    }

</script>

<script type="text/javascript">


