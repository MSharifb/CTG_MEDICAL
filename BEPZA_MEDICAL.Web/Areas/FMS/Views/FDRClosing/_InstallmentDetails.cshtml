@model BEPZA_MEDICAL.Web.Areas.FMS.ViewModel.FDRClosingViewModel

<div class="row">
    <table id="grid" class="contenttable">
        <thead>
            <tr>
                <th>
                    SL. #
                </th>
                <th>
                    Date
                </th>
                <th>
                    Interest
                </th>
                <th>
                    Tax
                </th>
                <th>
                   Bank Charge
                </th>
                <th>
                    Profit
                </th>

            </tr>
        </thead>

        <tbody>
            @for (int i = 0; i < Model.FDRInstallmentList.Count; i++)
            {
                int sl=i+1;
                var item = Model.FDRInstallmentList.ToList()[i];
                <tr>
                    <td style="text-align: center">
                        @Html.Encode(@sl)
                    </td>
                    <td style="text-align: center">
                        @Html.Encode(@item.InsDate)
                    </td>
                    <td style="text-align: right">
                        @Html.Encode(@item.InsAmount)
                    </td>
                    <td style="text-align: right">
                        @Html.Encode(@item.TaxAmount)
                    </td>
                    <td style="text-align: right">
                        @Html.Encode(@item.BankCharge)
                    </td>
                    <td style="text-align: right">
                        @Html.Encode(@item.ProfitAmount)
                    </td>
                </tr>
               
            }
        </tbody>
    </table>

</div>
