@model BEPZA_MEDICAL.Web.Areas.CPF.Models.BankInformationViewModel.BankInformationViewModel
 
@{
    //var controller = HttpContext.Current.Request.RequestContext.RouteData.Values["Controller"].ToString(); /// How to get controller name in view page
    
    ViewBag.Title = "Create";
    Layout = "~/Areas/CPF/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("Create", "BankInformation", FormMethod.Post, new { id = "frm" }))
{
    
    <fieldset>
        <div class="GroupBox" id="message" style="min-height:15px;"  >
         @Html.ValidationSummary(false, BEPZA_MEDICAL.Web.Utility.Common.ValidationSummaryHead)
            @if (!string.IsNullOrEmpty(Model.ErrMsg))
            {
                <div style="color:Red" class="@Model.ErrMsg">
                    @Model.ErrMsg
                </div>
            }
           
        </div>
        <div> 
        @Html.Partial("_CreateOrEdit", Model)
        </div>
        <br />
        <div class="button-center buttonSubmit">
            @if ((new BEPZA_MEDICAL.Web.Utility.AppConstant()).IsAddAssigned)
            {
                <input id="btnSave" type="submit" value="Save" style="width: auto; overflow: visible; padding-left: .25em;
                    padding-right: .25em;" />
            }
            <input type="button" value="Clear" id="btnClear" name="btnClear"  />
        </div>
    </fieldset>
}
<div class=" button-crude button-left ">
    @Html.ActionLink("Back to List", "BankInformationIndex")
</div>


