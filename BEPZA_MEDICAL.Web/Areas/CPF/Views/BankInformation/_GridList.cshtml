<script type="text/javascript">

    $(document).ready(function () {
       
        $('#jqGrid').jqGrid({
            url: '@Url.Action("GetList")',
            datatype: 'json',
            mtype: 'POST',
            colNames: ['ID', 'Account No', 'Bank Name', 'Bank Name', 'Branch Name', 'Branch Name', 'Opening Balance', 'Delete'],
            colModel: [
                            { name: 'Id', index: 'Id', align: 'left', search: false, hidden: true, edittype: 'text' },
                            { name: 'AccountNo', index: 'AccountNo', width: '70px', align: 'left', search: true, edittype: 'text', formatter: viewformatEdiorLink },
                            { name: 'BankId', index: 'BankId', align: 'center', search: true, hidden: true, width: '60px', edittype: 'select', surl: '@Url.Action("BankList")' },
                            { name: 'BankName', index: 'BankName', align: 'left', search: false, width: '100px', edittype: 'text' },
                            { name: 'BranchId', index: 'BranchId', align: 'left', search: true, hidden: true, width: '100px', edittype: 'select', surl: '@Url.Action("BankBranchList")' },
                            { name: 'BranchName', index: 'BranchName', align: 'left', search: false, width: '100px', edittype: 'text' },
                            { name: 'OpeningBalance', index: 'OpeningBalance', align: 'right', search: false, width: '100px', edittype: 'text' },
                            { name: 'Delete', index: 'Delete', align: 'center', search: false, hidden: IsDeleteAssigned, sortable: false, width: '50px', edittype: 'image', formatter: deleteformateadorLink }
                          ],
            autowidth: true,
            caption: "Bank Account information List",
            rowList: [20, 30, 40, 50, 100],
            pager: $('#jqGridPager'),
            rowNum: 20,
            sortname: 'ID',
            sortorder: 'asc',
            viewrecords: true,
            height: '100%',
            width: '50%'
        });
       
        $("#jqSearch").jqGrid('filterGrid', '#jqGrid', { gridModel: true, gridNames: true, formtype: 'horizontal', autosearch: false, enableSearch: true, enableClear: true });

    });
    function deleteformateadorLink(cellvalue, options, rowObject) {
        var url = '@Html.ActionLink(" ", "Delete", new { id = "_id_" }, new { @class = "deleteItem" })';
        url = url.replace(/_id_/, rowObject[0]);
        return url;
    }
    function viewformatEdiorLink(cellvalue, options, rowObject) {

        var url = '@Html.ActionLink("_name_", "Edit", new { id = "_id_" })';
        url = url.replace(/_name_/, cellvalue);
        url = url.replace(/_id_/, rowObject[0]);
        return url;
    }
</script>


<script type="text/javascript">

    $(function () {

        $("a.deleteItem").live("click", function () {
            deleteLinkObj = $(this);  //for future use
            $('#delete-dialog').dialog('open');
            return false; // prevents the default behaviour
        });
        $('#delete-dialog').dialog({
            autoOpen: false, width: 320, resizable: false, modal: true, //Dialog options
            overlay: {
                backgroundColor: '#000',
                opacity: 0.5
            },
            buttons: {
                "Yes": function () {

                    $.post(deleteLinkObj[0].href, function (obj) {  //Post to action

                        if (obj.Success) {
                            $("#message").show().html("<b>" + obj.Message + "</b>").css("color", "Green");
                            $('#sButton').trigger('click');
                        }
                        else {
                            $("#message").show().html("<b>" + obj.Message + "</b>").css("color", "red");
                        }
                    });
                    $(this).dialog("close");
                },
                "No": function () {
                    $(this).dialog("close");
                }
            }
        });
    });

</script>