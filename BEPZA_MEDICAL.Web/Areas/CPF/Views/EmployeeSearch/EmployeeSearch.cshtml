@model MFS_IWM.Web.Areas.CPF.Models.EmployeeSearchViewModel.EmployeeSearchViewModel
@{
    
    ViewBag.Title = "EmployeeSearch";
    //Layout = "~/Areas/CPF/Views/Shared/_Layout.cshtml";
}
@using (Ajax.BeginForm("EmployeeSearch", "EmployeeSearch", new AjaxOptions { HttpMethod = "POST" }, new { id = "frm" }))
{

    <div class="GroupBox">
        @Html.RadioButtonFor(x => x.EmployeeStatus, 0, new { id = "AllEmployee", @class = "empStatus" })
        <label for="paiement_cash">
            All Employee</label>
        @Html.RadioButtonFor(x => x.EmployeeStatus, 1, new { id = "ActiveEmployee", @class = "empStatus" })
        <label for="paiement_cash">
            Active Employee</label>
        @Html.RadioButtonFor(x => x.EmployeeStatus, 2, new { id = "InactiveEmployee", @class = "empStatus" })
        <label for="paiement_cash">
            Inactive Employee</label>
    </div>
    <fieldset>
        <div id="jqSearch">
        </div>
    </fieldset> 
    <br />   
    <table id="jqGrid" cellpadding="0" cellspacing="0">
    </table>
    <div id="jqGridPager" style="text-align: center;">
    </div>  
    <div id="divList">
        @Html.Partial("_EmployeeSearchGridList",Model)
    </div>   
    
   
}
