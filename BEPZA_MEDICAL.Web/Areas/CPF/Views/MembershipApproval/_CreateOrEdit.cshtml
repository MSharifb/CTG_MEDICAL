</fieldset>


<style type="text/css">
    #PresentBasicPay {
        background: #F2F5F8;
    }
</style>

<script type="text/javascript">
    $(document).ready(function () {
        $('.HideDateButton').find('span.field #ApplicationDate').attr('readonly', true).css('background-color', '#F2F5F8');
        $('.HideDateButton').find('#ApplicationDateImg').find('img').hide();
    })
</script>