    $(document).ready(function () {

        $('#jqGrid').jqGrid({
            url: '@Url.Action("GetList")',
            datatype: 'json',
            mtype: 'POST',
            colNames: ['ID', 'Application No.', 'Employee ID', 'Employee Initial', 'Membership ID', 'Employee Name', 'Request Period', 'And', ' Request Date', 'Request Amount', 'Approve Amount', 'No. Of Installment', 'Own Contribution', 'Approval Status', 'Approval Status', 'Approval Action'],
            colModel: [
                            { name: 'Id', index: 'Id', align: 'left', search: false, hidden: true, edittype: 'text' },
                            { name: 'ApplicationNo', index: 'ApplicationNo', width: '60px', align: 'left', search: false, edittype: 'text' },
                            { name: 'EmployeeCode', index: 'EmployeeCode', align: 'center', search: true,hidden:true, edittype: 'text' },
                            { name: 'EmployeeInitial', index: 'EmployeeInitial', align: 'center', left: true, hidden: true,  edittype: 'text' },
                            { name: 'MembershipCode', index: 'MembershipCode', align: 'left', search: true, width: '60px', edittype: 'text' },
                            { name: 'EmployeeName', index: 'EmployeeName', align: 'left', width: '120px', search: true, edittype: 'text' },
                            { name: 'RequestPeriod', index: 'RequestPeriod', align: 'center', hidden: true, search: true, edittype: 'text' },
                            { name: 'And', index: 'And', align: 'center', hidden: true, search: true, edittype: 'text' },
                            
                            { name: 'LoanRequestDate', index: 'LoanRequestDate', align: 'center', search: false, width: '60px', edittype: 'text' },
                            { name: 'LoanRequestAmount', index: 'LoanRequestAmount', align: 'right', search: false, width: '50px', edittype: 'text', formatter: 'currency', formatoptions: { thousandsSeparator: ",", decimalPlaces: 2, prefix: "", suffix: "", defaultValue: '0.00'} },
                            { name: 'ApproveAmount', index: 'ApproveAmount', align: 'right', search: false,  width: '60px', edittype: 'text',   formatter: 'currency', formatoptions: { thousandsSeparator: ",", decimalPlaces: 2, prefix: "", suffix: "", defaultValue: '0.00'} },
                            { name: 'NoOfInstallment', index: 'NoOfInstallment', align: 'right', search: false, width: '60px', edittype: 'text', formatter: 'currency', formatoptions: { thousandsSeparator: ",", decimalPlaces: 2, prefix: "", suffix: "", defaultValue: '0.00'} },
                            { name: 'EmployeeBalance', index: 'EmployeeBalance', align: 'right', search: false, width: '60px', edittype: 'text', formatter: 'currency', formatoptions: { thousandsSeparator: ",", decimalPlaces: 2, prefix: "", suffix: "", defaultValue: '0.00'} },
                            { name: 'ApplicationStatus', index: 'ApplicationStatus', align: 'left', search: true, hidden: true, edittype: 'select', surl: '@Url.Action("GetApprovalStatus")' },
                            { name: 'ApprovalStatus', index: 'ApprovalStatus', align: 'left', search: false, width: '50px', edittype: 'text' },
                            { name: 'ApprovalAction', index: 'ApprovalAction', align: 'center', hidden: false, search: false, width: '80px', edittype: 'text', formatter: viewformatApprovalActionLink },
                            //{ name: 'isEditable', index: 'isEditable', hidden: true, search: false, edittype: 'text' }
                          ],
            autowidth: true,
            caption: "Loan Approval Information",
            rowList: [20, 30, 40, 50, 100],
            pager: $('#jqGridPager'),
            rowNum: 20,
            sortname: 'ID',
            sortorder: 'asc',
            viewrecords: true,
            height: '100%',
            width: '50%'
        });

        $("#jqSearch").jqGrid('filterGrid', '#jqGrid', { gridModel: true, gridNames: true, formtype: 'horizontal', autosearch: false, enableSearch: true, enableClear: true });

    });

    function viewformatApprovalActionLink(cellvalue, options, rowObject) {

        var url = '@Html.ActionLink("_name_", "ApprovalAction", new { id = "_id_" })';
        url = url.replace(/_name_/, cellvalue);
        url = url.replace(/_id_/, rowObject[0]);
        return url;
    }

    $(function () {

        $('#sg_RequestPeriod, #sg_And').datepicker({ buttonImage: '@Url.Content("~/Content/Images/calendar-blue.gif")', dateFormat: 'dd-mm-yy', buttonImageOnly: true, showOn: "button", buttonText: 'Choose' })
        .css({ 'width': '100px' });

    }) 
</script>
