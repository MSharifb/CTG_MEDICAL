@model BEPZA_MEDICAL.Web.Areas.CPF.Models.Settlement.SettlementViewModel
@using BEPZA_MEDICAL.Web.Helpers

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/CPF/Views/Shared/_Layout.cshtml";
}

@using (Ajax.BeginForm("Index", "Settlement", new AjaxOptions { HttpMethod = "POST" }, new { id = "frm" }))
{

    <div class="GroupBox" id="message" style="min-height:15px;">
            @if (!string.IsNullOrEmpty(Model.ErrMsg))
            {
                <div class="@Model.errClass">
                    @Model.ErrMsg
                </div>
            }
            @Html.ValidationSummary(false, BEPZA_MEDICAL.Web.Utility.Common.ValidationSummaryHead)
        </div>
    <div class="GroupBox">
        <div id="jqSearch">
        </div>
        <div class="clear">
        </div>
    </div>


    <div class="button-crude button-left">
        @if ((new BEPZA_MEDICAL.Web.Utility.AppConstant()).IsAddAssigned)
        {
            @Html.ActionLink("Add New", "Create")
        }
    </div>
    <br />
    <br />
    <table id="jqGrid" cellpadding="0" cellspacing="0"></table>
    <div id="jqGridPager" style="text-align: center;">
    </div>
    <div id="divList">

        @Html.Partial("_GridList")
    </div>
}

